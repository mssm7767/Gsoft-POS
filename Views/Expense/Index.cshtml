@model List<GSoftPosNew.Models.Expense>

@{
    ViewData["Title"] = "Expense List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        :root {
            --ex-bg: #f3f4f6;
            --ex-card: #ffffff;
            --ex-muted: #6b7280;
            --ex-accent: #0f172a;
            --ex-primary: #0ea5a4;
            --ex-danger: #ef4444;
        }

        .expense-list-wrapper {
            min-height: calc(100vh - 120px);
            background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.16), transparent 55%), radial-gradient(circle at bottom right, rgba(16, 185, 129, 0.16), transparent 55%), var(--ex-bg);
            padding: 24px 12px 32px;
        }

        .expense-shell {
            max-width: 1180px;
            margin: 0 auto;
        }

        .expense-card {
            border-radius: 18px;
            border: 1px solid rgba(148, 163, 184, 0.35);
            overflow: hidden;
            background: radial-gradient(circle at top, #ffffff 0, #f9fafb 40%, #eef2ff 100%);
            box-shadow: 0 24px 60px rgba(15, 23, 42, 0.24);
        }

        .expense-card-header {
            background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.32), transparent 60%), linear-gradient(135deg, #0ea5e9, #0ea5a4);
            padding: 14px 20px;
            color: #e0f2fe;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
        }

        .expense-header-main {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .expense-header-icon {
            width: 42px;
            height: 42px;
            border-radius: 14px;
            background: rgba(15, 23, 42, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 25px rgba(15, 23, 42, 0.4);
        }

            .expense-header-icon i {
                font-size: 18px;
            }

        .expense-header-title {
            margin: 0;
            font-size: 18px;
            font-weight: 700;
            letter-spacing: 0.03em;
        }

        .expense-header-subtitle {
            margin: 0;
            font-size: 12px;
            opacity: 0.9;
        }

        .expense-add-btn {
            border-radius: 999px !important;
            padding: 7px 14px !important;
            font-size: 13px !important;
            font-weight: 600 !important;
            border: 1px solid rgba(15, 23, 42, 0.12) !important;
            background: #f9fafb !important;
            color: #0f172a !important;
            box-shadow: 0 8px 20px rgba(15, 23, 42, 0.18);
        }

            .expense-add-btn:hover {
                background: #e5e7eb !important;
            }

        .expense-card-body {
            padding: 16px 18px 18px;
        }

        /* success alert */
        #success-alert {
            border-radius: 12px;
            border: 1px solid rgba(34, 197, 94, 0.35);
            background: linear-gradient(135deg, #ecfdf5, #dcfce7);
            color: #166534;
            font-size: 14px;
        }

        /* filter bar */
        .expense-filter-bar {
            margin-bottom: 14px;
            padding: 12px 14px;
            border-radius: 14px;
            background: radial-gradient(circle at left, rgba(56, 189, 248, 0.08), transparent 55%), linear-gradient(180deg, #ffffff, #f9fafb);
            border: 1px solid rgba(148, 163, 184, 0.4);
        }

            .expense-filter-bar .form-label {
                font-size: 12px;
                color: var(--ex-muted);
                text-transform: uppercase;
                letter-spacing: 0.09em;
            }

            .expense-filter-bar .form-control,
            .expense-filter-bar .form-select {
                border-radius: 10px;
                border: 1px solid rgba(148, 163, 184, 0.9);
                font-size: 13px;
                padding: 8px 10px;
                background: linear-gradient(180deg, #ffffff, #f9fafb);
                box-shadow: 0 1px 2px rgba(15, 23, 42, 0.04);
                transition: border-color 0.12s ease, box-shadow 0.12s ease, background 0.12s ease;
            }

                .expense-filter-bar .form-control:focus,
                .expense-filter-bar .form-select:focus {
                    border-color: var(--ex-primary);
                    box-shadow: 0 0 0 1px rgba(45, 212, 191, 0.4);
                    background: #ffffff;
                }

            .expense-filter-bar .btn-primary {
                border-radius: 999px;
                font-size: 13px;
                padding: 7px 14px;
                background: linear-gradient(135deg, #2563eb, #1d4ed8);
                border: 1px solid rgba(30, 64, 175, 0.9);
            }

            .expense-filter-bar .btn-outline-secondary {
                border-radius: 999px;
                font-size: 13px;
                padding: 7px 13px;
            }

        /* table */
        .expense-table-wrapper {
            border-radius: 14px;
            border: 1px solid rgba(148, 163, 184, 0.4);
            overflow: hidden;
            background: #ffffff;
        }

        .expense-table {
            margin-bottom: 0;
            font-size: 13px;
        }

            .expense-table thead {
                font-size: 12px;
                text-transform: uppercase;
                letter-spacing: 0.08em;
            }

                .expense-table thead tr th {
                    padding-top: 10px;
                    padding-bottom: 10px;
                    border-bottom: 1px solid rgba(148, 163, 184, 0.8);
                    background: linear-gradient(180deg, #eff6ff, #e0f2fe);
                    color: #111827;
                    white-space: nowrap;
                }

            .expense-table tbody tr td {
                padding-top: 8px;
                padding-bottom: 8px;
                vertical-align: middle;
                border-bottom: 1px dashed rgba(148, 163, 184, 0.5);
            }

            .expense-table tbody tr:nth-child(even) td {
                background-color: #f9fafb;
            }

            .expense-table tbody tr:hover td {
                background: rgba(219, 234, 254, 0.9);
            }

        .expense-amount {
            font-variant-numeric: tabular-nums;
        }

        .expense-note {
            max-width: 220px;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .expense-created-by {
            white-space: nowrap;
        }

        .expense-actions .btn {
            border-radius: 999px;
            width: 30px;
            height: 30px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .expense-actions .btn-outline-warning {
            border-color: #fbbf24;
            color: #92400e;
        }

            .expense-actions .btn-outline-warning:hover {
                background: #fef3c7;
            }

        .expense-actions .btn-outline-danger {
            border-color: #f97373;
            color: #b91c1c;
        }

            .expense-actions .btn-outline-danger:hover {
                background: #fee2e2;
            }

        .expense-table tfoot td {
            background: #f9fafb;
            border-top: 1px solid rgba(148, 163, 184, 0.8);
        }

        /* pagination */
        .expense-pagination .page-link {
            border-radius: 999px !important;
            margin: 0 2px;
            font-size: 13px;
        }

        .expense-pagination .page-item.active .page-link {
            background: linear-gradient(135deg, #2563eb, #0ea5e9);
            border-color: transparent;
            box-shadow: 0 8px 20px rgba(37, 99, 235, 0.35);
        }

        .expense-pagination .page-item.disabled .page-link {
            opacity: 0.5;
        }

        @@media (max-width: 768px) {
            .expense-list-wrapper

        {
            padding: 18px 8px 24px;
        }

        .expense-card {
            border-radius: 14px;
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.22);
        }

        .expense-card-header {
            flex-direction: column;
            align-items: flex-start;
        }

        }</style>
}

<div class="expense-list-wrapper">
    <div class="expense-shell">
        <div class="expense-card card border-0 shadow-lg rounded-4">
            <div class="expense-card-header">
                <div class="expense-header-main">
                    <div class="expense-header-icon">
                        <i class="fa fa-list"></i>
                    </div>
                    <div>
                        <h5 class="expense-header-title mb-1">Expense List</h5>
                        <p class="expense-header-subtitle mb-0">View, filter, and manage all recorded expenses.</p>
                    </div>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-light btn-sm fw-semibold expense-add-btn">
                        <i class="fa fa-plus-circle me-1"></i> Add Expense
                    </a>
                </div>
            </div>

            <!-- Success Alert -->
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center mx-3 mt-3 mb-0" id="success-alert">
                    <i class="fa fa-check-circle me-1"></i> @TempData["Message"]
                </div>
            }

            <div class="expense-card-body card-body">
                <!-- Filter Section -->
                <form method="get" asp-action="Index" class="row g-3 align-items-end mb-3 expense-filter-bar">
                    <div class="col-md-4">
                        <label for="CategoryFilter" class="form-label fw-semibold">Filter by Category</label>
                        <select id="CategoryFilter" name="categoryId" class="form-select">
                            <option value="">-- All Categories --</option>
                            @foreach (var category in ViewBag.Categories as List<ExpenseCategory>)
                            {
                                var isSelected = ViewBag.SelectedCategoryId != null && ViewBag.SelectedCategoryId == category.Id;
                                @Html.Raw($"<option value='{category.Id}' {(isSelected ? "selected" : "")}>{category.CategoryName}</option>")
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="fromDate" class="form-label fw-semibold">From Date</label>
                        <input type="date"
                               class="form-control"
                               id="fromDate"
                               name="fromDate"
                               value="@(ViewBag.FromDate != null ? ((DateTime)ViewBag.FromDate).ToString("yyyy-MM-dd") : "")" />
                    </div>

                    <div class="col-md-3">
                        <label for="toDate" class="form-label fw-semibold">To Date</label>
                        <input type="date"
                               class="form-control"
                               id="toDate"
                               name="toDate"
                               value="@(ViewBag.ToDate != null ? ((DateTime)ViewBag.ToDate).ToString("yyyy-MM-dd") : "")" />
                    </div>
                    <div class="col-md-auto">
                        <button type="submit" class="btn btn-primary mb-1">
                            <i class="fa fa-filter me-1"></i> Apply
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary mb-1">
                            <i class="fa fa-sync-alt me-1"></i> Reset
                        </a>
                    </div>
                </form>

                <!-- Expense Table -->
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive expense-table-wrapper mt-2">
                        <table class="table table-hover align-middle text-sm expense-table">
                            <thead class="text-center">
                                <tr>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Reference #</th>
                                    <th>Expense For</th>
                                    <th class="text-end">Amount (Rs)</th>
                                    <th>Note</th>
                                    <th>Created By</th>
                                    <th style="width:120px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ExpenseDate.ToString("yyyy-MM-dd")</td>
                                        <td>@item.ExpenseCategory?.CategoryName</td>
                                        <td>@item.ReferenceNumber</td>
                                        <td>@item.ExpenseFor</td>
                                        <td class="text-end fw-semibold expense-amount">@item.Amount.ToString("N2")</td>
                                        <td class="expense-note">@item.Note</td>
                                        <td class="expense-created-by">@item.CreatedBy</td>
                                        <td class="text-center expense-actions">
                                            <a asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-warning me-1"
                                               title="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Are you sure you want to delete this expense?');"
                                               title="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="fw-bold">
                                <tr>
                                    <td colspan="4" class="text-end">Total:</td>
                                    <td class="text-end expense-amount">@ViewBag.TotalAmount.ToString("N2")</td>
                                    <td colspan="3"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Expense pagination" class="mt-3">
                        <ul class="pagination justify-content-center expense-pagination">
                            @{
                                int currentPage = ViewBag.CurrentPage;
                                int totalPages = ViewBag.TotalPages;
                                int prevPage = currentPage - 1;
                                int nextPage = currentPage + 1;
                            }

                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link"
                                   href="@Url.Action("Index", new { categoryId = ViewBag.SelectedCategoryId, fromDate = ViewBag.FromDate?.ToString("yyyy-MM-dd"), toDate = ViewBag.ToDate?.ToString("yyyy-MM-dd"), page = prevPage })">
                                    &laquo;
                                </a>
                            </li>

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link"
                                       href="@Url.Action("Index", new { categoryId = ViewBag.SelectedCategoryId, fromDate = ViewBag.FromDate?.ToString("yyyy-MM-dd"), toDate = ViewBag.ToDate?.ToString("yyyy-MM-dd"), page = i })">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link"
                                   href="@Url.Action("Index", new { categoryId = ViewBag.SelectedCategoryId, fromDate = ViewBag.FromDate?.ToString("yyyy-MM-dd"), toDate = ViewBag.ToDate?.ToString("yyyy-MM-dd"), page = nextPage })">
                                    &raquo;
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
                else
                {
                    <div class="alert alert-info text-center mt-3 mb-0">
                        <i class="fa fa-info-circle me-1"></i> No expenses found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Auto-hide success alert (logic same rakha hai) -->
<script>
    setTimeout(() => {
        const alertBox = document.getElementById("success-alert");
        if (alertBox) {
            alertBox.style.transition = "opacity 0.5s ease";
            alertBox.style.opacity = "0";
            setTimeout(() => alertBox.remove(), 500);
        }
    }, 2500);
</script>

@model GSoftPosNew.Models.ItemBarcodeModel

@{
    ViewData["Title"] = "Generate Barcode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ItemId"></label>
        <select asp-for="ItemId"
                asp-items="@(ViewData["Items"] as SelectList)"
                class="form-control">
        </select>

        <span asp-validation-for="ItemId" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Barcode"></label>
        <input asp-for="Barcode" class="form-control" />
        <span asp-validation-for="Barcode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        <i class="fa fa-barcode me-1"></i> Generate Barcode
    </button>
</form>
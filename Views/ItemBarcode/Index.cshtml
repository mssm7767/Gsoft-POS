    <div id="printTemplate" style="display: none;"></div>

    <!-- Debug Button -->
    <button class="debug-btn" id="debugBtn" title="Debug API Connection">
        <i class="fas fa-bug"></i>
    </button>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // State management
        let selectedItems = [];
        let selectedSize = '38x28';
        let isDemoMode = false;

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initApp();
        });

        function initApp() {
            // Initialize datetime
            updateDateTime();
            setInterval(updateDateTime, 1000);

            // Initialize barcode preview
            updateBarcodePreview();
            updateStats();
            updateEmptyState();

            // Set up event listeners
            setupEventListeners();
        }

        // Update current date and time
        function updateDateTime() {
            const now = new Date();
            const options = {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: true
            };
            const dateTimeStr = now.toLocaleDateString('en-US', options);
            document.getElementById('currentDateTime').textContent = dateTimeStr;
        }

        // Initialize barcode preview
        function updateBarcodePreview() {
            if (selectedItems.length > 0) {
                const firstItem = selectedItems[0];
                document.getElementById('previewItemName').textContent = firstItem.name;
                document.getElementById('previewItemCode').textContent = firstItem.code;
                document.getElementById('previewPrice').textContent = 'Rs. ' + firstItem.price.toLocaleString();

                JsBarcode("#barcodePreview", firstItem.barcode, {
                    format: "CODE128",
                    lineColor: "#000",
                    width: 1.0,
                    height: 35,
                    displayValue: false,
                    margin: 0
                });
            } else {
                // Show default preview
                document.getElementById('previewItemName').textContent = 'Search and add items';
                document.getElementById('previewItemCode').textContent = 'ITEM-CODE';
                document.getElementById('previewPrice').textContent = 'Rs. 0';

                // Generate default barcode
                JsBarcode("#barcodePreview", "GS-PRO-001", {
                    format: "CODE128",
                    lineColor: "#000",
                    width: 1.0,
                    height: 35,
                    displayValue: false,
                    margin: 0
                });
            }
        }

        // Update statistics
        function updateStats() {
            const totalItems = selectedItems.length;
            const totalLabels = selectedItems.reduce((sum, item) => sum + (item.quantity || 1), 0);

            document.getElementById('totalItems').textContent = totalItems;
            document.getElementById('totalLabels').textContent = totalLabels;
            document.getElementById('labelSize').textContent = selectedSize.replace('x', '×');
            document.getElementById('badgeCount').textContent = totalLabels;

            // Update summary
            document.getElementById('summaryItems').textContent = `${totalItems} item${totalItems !== 1 ? 's' : ''}`;
            document.getElementById('summaryLabels').textContent = `${totalLabels} label${totalLabels !== 1 ? 's' : ''}`;

            // Update status
            const statusEl = document.getElementById('readyStatus');
            if (totalLabels > 0) {
                statusEl.textContent = 'Ready to Print';
                statusEl.style.color = 'var(--success)';
            } else {
                statusEl.textContent = 'Waiting for Items';
                statusEl.style.color = 'var(--warning)';
            }
        }

        // Set up all event listeners
        function setupEventListeners() {
            // Size selection
            document.querySelectorAll('.size-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('.size-option').forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                    selectedSize = this.getAttribute('data-size');
                    document.getElementById('labelSize').textContent = selectedSize.replace('x', '×');
                    updateBarcodePreview();
                });
            });

            // Search functionality
            document.getElementById('itemSearch').addEventListener('input', handleSearch);

            // Clear search
            document.getElementById('clearSearch').addEventListener('click', function() {
                document.getElementById('itemSearch').value = '';
                document.getElementById('searchResults').style.display = 'none';
                document.getElementById('itemSearch').focus();
            });

            // Scan barcode
            document.getElementById('scanBarcode').addEventListener('click', function() {
                const barcode = prompt('Enter barcode to scan:');
                if (barcode && barcode.trim()) {
                    document.getElementById('itemSearch').value = barcode.trim();
                    document.getElementById('itemSearch').dispatchEvent(new Event('input'));
                }
            });

            // Add sample items button (disabled for now since you don't want demo)
            document.getElementById('addSampleItems').addEventListener('click', function() {
                showNotification('Demo items disabled. Please search for actual inventory items.', 'info');
            });

            // Clear all items
            document.getElementById('clearAll').addEventListener('click', clearAllItems);

            // Print barcodes
            document.getElementById('printBarcodes').addEventListener('click', printBarcodes);

            // Debug button
            document.getElementById('debugBtn').addEventListener('click', function() {
                testApiConnection();
            });

            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                // Escape to clear search
                if (e.key === 'Escape') {
                    document.getElementById('itemSearch').value = '';
                    document.getElementById('searchResults').style.display = 'none';
                }

                // Enter to select first search result
                if (e.key === 'Enter' && document.activeElement.id === 'itemSearch') {
                    const firstResult = document.querySelector('.search-item');
                    if (firstResult) {
                        e.preventDefault();
                        const itemData = getItemDataFromElement(firstResult);
                        if (itemData) {
                            addItemToTable(itemData);
                            document.getElementById('itemSearch').value = '';
                            document.getElementById('searchResults').style.display = 'none';
                        }
                    }
                }
            });

            // Click outside to close search results
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.search-container')) {
                    document.getElementById('searchResults').style.display = 'none';
                }
            });
        }

        // Search handler - ONLY REAL DATABASE
        async function handleSearch() {
            const searchTerm = this.value.trim();
            const resultsContainer = document.getElementById('searchResults');
            const searchIcon = document.getElementById('searchIcon');

            if (searchTerm.length < 2) {
                resultsContainer.style.display = 'none';
                searchIcon.className = 'fas fa-search';
                return;
            }

            // Show loading
            searchIcon.className = 'fas fa-spinner fa-spin';
            resultsContainer.innerHTML = '<div class="search-item"><div class="text-center w-100"><div class="spinner mx-auto"></div><p class="mt-2 mb-0">Searching inventory...</p></div></div>';
            resultsContainer.style.display = 'block';

            try {
                // Fetch from REAL DATABASE API
                const response = await fetch(`/Sales/SearchItems?term=${encodeURIComponent(searchTerm)}`);

                if (!response.ok) {
                    throw new Error(`Server error: ${response.status}`);
                }

                const items = await response.json();

                if (!Array.isArray(items)) {
                    throw new Error('Invalid response format from server');
                }

                displaySearchResults(items, searchTerm);

            } catch (error) {
                console.error('Search API error:', error);
                showNotification('Cannot connect to inventory database. Please check your connection.', 'danger');
                resultsContainer.innerHTML = `
                    <div class="search-item">
                        <div class="search-item-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div>
                            <div class="fw-semibold text-danger">Database Error</div>
                            <div class="small text-muted">Cannot load inventory items</div>
                            <div class="small text-muted mt-1">Error: ${error.message}</div>
                        </div>
                    </div>
                `;
                resultsContainer.style.display = 'block';
            } finally {
                searchIcon.className = 'fas fa-search';
            }
        }

        // Display search results
        function displaySearchResults(items, searchTerm) {
            const resultsContainer = document.getElementById('searchResults');

            if (items.length === 0) {
                resultsContainer.innerHTML = `
                    <div class="search-item">
                        <div class="search-item-icon">
                            <i class="fas fa-search"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">No items found</div>
                            <div class="small text-muted">Try a different search term</div>
                        </div>
                    </div>
                `;
                resultsContainer.style.display = 'block';
                return;
            }

            let resultsHTML = '';

            items.forEach(item => {
                // Use actual item data from database
                const icon = getIconForCategory(item.category || '');
                const price = item.salePrice || item.price || 0;
                const barcode = item.barcode || item.itemCode || '';
                const stock = item.stock || item.stockQuantity || 0;

                resultsHTML += `
                    <div class="search-item"
                         data-id="${item.id}"
                         data-code="${item.itemCode}"
                         data-name="${item.itemName}"
                         data-price="${price}"
                         data-barcode="${barcode}"
                         data-category="${item.category || ''}"
                         data-stock="${stock}">
                        <div class="search-item-icon">
                            <i class="fas ${icon}"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start mb-1">
                                <div class="fw-semibold text-truncate" style="max-width: 200px">
                                    ${item.itemName}
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-primary-light text-primary">Rs. ${price.toLocaleString()}</span>
                                </div>
                            </div>
                            <div class="small text-muted d-flex gap-3 mb-1">
                                <span><i class="fas fa-hashtag"></i> ${item.itemCode}</span>
                                ${item.category ? `<span><i class="fas fa-tag"></i> ${item.category}</span>` : ''}
                                ${barcode ? `<span><i class="fas fa-barcode"></i> ${barcode}</span>` : ''}
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge ${stock > 10 ? 'bg-success' : stock > 0 ? 'bg-warning' : 'bg-danger'}">
                                    Stock: ${stock}
                                </span>
                                <button class="btn btn-sm btn-outline-primary add-item-btn">
                                    <i class="fas fa-plus me-1"></i> Add
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            });

            resultsContainer.innerHTML = resultsHTML;
            resultsContainer.style.display = 'block';

            // Add event listeners to search results
            document.querySelectorAll('.search-item').forEach(item => {
                // Click on item (except the add button)
                item.addEventListener('click', function(e) {
                    if (!e.target.closest('.add-item-btn')) {
                        const itemData = getItemDataFromElement(this);
                        if (itemData) {
                            addItemToTable(itemData);
                            document.getElementById('itemSearch').value = '';
                            resultsContainer.style.display = 'none';
                        }
                    }
                });

                // Click on add button
                const addBtn = item.querySelector('.add-item-btn');
                if (addBtn) {
                    addBtn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        const parentItem = this.closest('.search-item');
                        const itemData = getItemDataFromElement(parentItem);
                        if (itemData) {
                            addItemToTable(itemData);
                            showNotification(`${itemData.itemName} added to print queue`, 'success');
                        }
                    });
                }
            });
        }

        // Helper: Get item data from search result element
        function getItemDataFromElement(element) {
            return {
                id: element.getAttribute('data-id'),
                itemCode: element.getAttribute('data-code'),
                itemName: element.getAttribute('data-name'),
                salePrice: parseFloat(element.getAttribute('data-price')) || 0,
                barcode: element.getAttribute('data-barcode'),
                category: element.getAttribute('data-category'),
                stock: parseInt(element.getAttribute('data-stock')) || 0
            };
        }

        // Add item to table
        function addItemToTable(item) {
            // Check if item already exists
            const existingIndex = selectedItems.findIndex(i => i.id == item.id);

            if (existingIndex > -1) {
                // Increase quantity
                selectedItems[existingIndex].quantity += 1;
                updateTableRow(selectedItems[existingIndex]);
                showNotification(`Increased quantity of ${item.itemName}`, 'info');
            } else {
                // Add new item
                const newItem = {
                    id: item.id,
                    code: item.itemCode,
                    name: item.itemName,
                    price: item.salePrice,
                    barcode: item.barcode || item.itemCode,
                    quantity: 1,
                    icon: getIconForCategory(item.category)
                };
                selectedItems.push(newItem);
                addTableRow(newItem);
                showNotification(`${item.itemName} added successfully`, 'success');
            }

            updateBarcodePreview();
            updateStats();
            updateEmptyState();

            // Clear search
            document.getElementById('searchResults').style.display = 'none';
        }

        // Add table row
        function addTableRow(item) {
            const tableBody = document.getElementById('itemsTableBody');
            const row = document.createElement('tr');
            row.setAttribute('data-id', item.id);
            row.className = 'fade-in';
            row.innerHTML = `
                <td>
                    <div class="d-flex align-items-center gap-2">
                        <div class="bg-primary-light rounded-1 p-1">
                            <i class="fas ${item.icon || 'fa-box'} fa-sm text-primary"></i>
                        </div>
                        <span class="fw-semibold">${item.code}</span>
                    </div>
                </td>
                <td>
                    <div class="text-truncate" style="max-width: 200px" title="${item.name}">
                        ${item.name}
                    </div>
                </td>
                <td>
                    <span class="badge bg-primary-light text-primary fw-semibold">
                        Rs. ${item.price.toLocaleString()}
                    </span>
                </td>
                <td>
                    <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-sm btn-outline-primary qty-minus" style="width: 32px; height: 32px">
                            <i class="fas fa-minus"></i>
                        </button>
                        <input type="number" class="form-control qty-input" value="${item.quantity}" min="1" style="width: 60px">
                        <button class="btn btn-sm btn-outline-primary qty-plus" style="width: 32px; height: 32px">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                </td>
                <td class="fw-bold text-primary">
                    Rs. ${(item.price * item.quantity).toLocaleString()}
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <button class="btn action-btn remove-item" title="Remove">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            `;
            tableBody.appendChild(row);

            // Add event listeners
            const qtyInput = row.querySelector('.qty-input');
            const minusBtn = row.querySelector('.qty-minus');
            const plusBtn = row.querySelector('.qty-plus');
            const removeBtn = row.querySelector('.remove-item');

            qtyInput.addEventListener('change', function() {
                const newQty = parseInt(this.value) || 1;
                updateItemQuantity(item.id, newQty);
            });

            minusBtn.addEventListener('click', function() {
                const currentQty = parseInt(qtyInput.value) || 1;
                if (currentQty > 1) {
                    qtyInput.value = currentQty - 1;
                    updateItemQuantity(item.id, currentQty - 1);
                }
            });

            plusBtn.addEventListener('click', function() {
                const currentQty = parseInt(qtyInput.value) || 1;
                qtyInput.value = currentQty + 1;
                updateItemQuantity(item.id, currentQty + 1);
            });

            removeBtn.addEventListener('click', function() {
                removeItem(item.id);
            });
        }

        // Update table row
        function updateTableRow(item) {
            const row = document.querySelector(`tr[data-id="${item.id}"]`);
            if (row) {
                const qtyInput = row.querySelector('.qty-input');
                qtyInput.value = item.quantity;

                const totalCell = row.querySelector('td:nth-child(5)');
                totalCell.textContent = `Rs. ${(item.price * item.quantity).toLocaleString()}`;
            }
        }

        // Update item quantity
        function updateItemQuantity(itemId, newQty) {
            const itemIndex = selectedItems.findIndex(item => item.id == itemId);
            if (itemIndex > -1) {
                selectedItems[itemIndex].quantity = newQty;
                updateTableRow(selectedItems[itemIndex]);
                updateBarcodePreview();
                updateStats();
            }
        }

        // Remove item
        function removeItem(itemId) {
            const item = selectedItems.find(item => item.id == itemId);
            if (item) {
                selectedItems = selectedItems.filter(item => item.id != itemId);
                const row = document.querySelector(`tr[data-id="${itemId}"]`);
                if (row) {
                    row.style.opacity = '0';
                    row.style.transform = 'translateX(100px)';
                    setTimeout(() => {
                        row.remove();
                        updateBarcodePreview();
                        updateStats();
                        updateEmptyState();
                        showNotification(`${item.name} removed`, 'warning');
                    }, 300);
                }
            }
        }

        // Clear all items
        function clearAllItems() {
            if (selectedItems.length === 0) {
                showNotification('No items to clear', 'info');
                return;
            }

            if (confirm('Are you sure you want to clear all items from the print queue?')) {
                selectedItems = [];
                document.getElementById('itemsTableBody').innerHTML = '';
                updateBarcodePreview();
                updateStats();
                updateEmptyState();
                showNotification('All items cleared', 'danger');
            }
        }

        // Update empty state
        function updateEmptyState() {
            const emptyState = document.getElementById('emptyTableState');
            const tableHead = document.querySelector('#itemsTable thead');

            if (selectedItems.length === 0) {
                emptyState.style.display = 'block';
                if (tableHead) tableHead.style.display = 'none';
            } else {
                emptyState.style.display = 'none';
                if (tableHead) tableHead.style.display = 'table-header-group';
            }
        }

        // Print barcodes
        function printBarcodes() {
            if (selectedItems.length === 0) {
                showNotification('Please add items to print barcodes', 'warning');
                return;
            }

            const printBtn = document.getElementById('printBarcodes');
            const originalText = printBtn.innerHTML;
            printBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Preparing...';
            printBtn.disabled = true;

            // Get dimensions
            const dimensions = selectedSize.split('x');
            const width = parseInt(dimensions[0]);
            const height = parseInt(dimensions[1]);

            // Size configurations
            const sizeConfigs = {
                '38x28': { shopFont: '11px', itemFont: '10px', codeFont: '10px', priceFont: '11px', barcodeWidth: 1.0, barcodeHeight: 32 },
                '50x25': { shopFont: '12px', itemFont: '11px', codeFont: '11px', priceFont: '12px', barcodeWidth: 1.2, barcodeHeight: 28 },
                '40x30': { shopFont: '12px', itemFont: '11px', codeFont: '11px', priceFont: '12px', barcodeWidth: 1.1, barcodeHeight: 34 },
                '60x40': { shopFont: '14px', itemFont: '13px', codeFont: '13px', priceFont: '14px', barcodeWidth: 1.4, barcodeHeight: 42 }
            };

            const config = sizeConfigs[selectedSize] || sizeConfigs['38x28'];
            const shopName = "@(ViewBag.ShopName ?? "G-SOFT POS")";
            const printDate = new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });

            // Create print template
            let printHTML = `
                <!DOCTYPE html>
                <html>
                <head>
                    <title>Barcode Labels - ${shopName}</title>
                    <style>
                        @@page { size: ${width}mm ${height}mm; margin: 0; }
                        body { margin: 0; padding: 0; font-family: Arial, sans-serif; }
                        .label {
                            width: ${width}mm;
                            height: ${height}mm;
                            padding: 2mm 3mm;
                            display: flex;
                            flex-direction: column;
                            justify-content: space-between;
                            align-items: flex-start;
                            page-break-after: always;
                            box-sizing: border-box;
                            position: relative;
                        }
                        .shop-name { font-size: ${config.shopFont}; font-weight: bold; color: #4361ee; }
                        .item-name { font-size: ${config.itemFont}; font-weight: 600; max-width: ${width - 6}mm; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
                        .barcode-container { margin: 1mm 0; width: 100%; }
                        .bottom-info { display: flex; justify-content: space-between; align-items: flex-end; width: 100%; }
                        .item-code { font-size: ${config.codeFont}; font-weight: bold; }
                        .item-price { font-size: ${config.priceFont}; font-weight: bold; color: #e63946; }
                        .print-date { position: absolute; bottom: 1mm; right: 2mm; font-size: 8px; color: #999; }
                    </style>
                </head>
                <body>
            `;

            // Generate labels
            selectedItems.forEach(item => {
                for (let i = 0; i < item.quantity; i++) {
                    printHTML += `
                        <div class="label">
                            <div class="shop-name">${shopName}</div>
                            <div class="item-name">${item.name}</div>
                            <div class="barcode-container">
                                <svg class="barcode"></svg>
                            </div>
                            <div class="bottom-info">
                                <div class="item-code">${item.code}</div>
                                <div class="item-price">Rs. ${item.price.toLocaleString()}</div>
                            </div>
                            <div class="print-date">${printDate}</div>
                        </div>
                    `;
                }
            });

            printHTML += '</body></html>';

            // Open print window
            const printWindow = window.open('', '_blank');
            printWindow.document.write(printHTML);
            printWindow.document.close();

            // Generate barcodes after content loads
            printWindow.onload = function() {
                const barcodes = printWindow.document.querySelectorAll('.barcode');
                let index = 0;

                selectedItems.forEach(item => {
                    for (let i = 0; i < item.quantity; i++) {
                        if (barcodes[index]) {
                            JsBarcode(barcodes[index], item.barcode, {
                                format: "CODE128",
                                lineColor: "#000",
                                width: config.barcodeWidth,
                                height: config.barcodeHeight,
                                displayValue: false,
                                margin: 0
                            });
                        }
                        index++;
                    }
                });

                // Restore button
                printBtn.innerHTML = originalText;
                printBtn.disabled = false;

                // Print after delay
                setTimeout(() => {
                    printWindow.print();
                    printWindow.onafterprint = function() {
                        printWindow.close();
                        showNotification('Barcodes printed successfully', 'success');
                    };
                }, 500);
            };
        }


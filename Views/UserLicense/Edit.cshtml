@model GSoftPosNew.Models.User

@{
    ViewData["Title"] = "Edit User License Expiry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" readonly />
    </div>

    <div class="form-group mt-3">
        <label asp-for="LicenseExpiryDate"></label>
        <input asp-for="LicenseExpiryDate" class="form-control" type="date" />
        <span asp-validation-for="LicenseExpiryDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        <i class="fa fa-save me-1"></i> Save
    </button>
</form>

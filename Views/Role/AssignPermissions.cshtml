@using GSoftPosNew.ViewModels
@model AssignPermissionsViewModel

@{
    ViewData["Title"] = "Assign Permissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var allowedModules = ViewBag.AllowedModules as List<string> ?? new List<string>();
}

<div class="container mt-4" style="max-width:800px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fa fa-user-shield"></i> Assign Permissions</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("SavePermissions", "Role", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.Label("RoleId", "Select Role", new { @class = "form-label" })
                    @Html.DropDownList("RoleId", Model.RoleList, "-- Select Role --", new { @class = "form-select" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Modules Access</label>
                    <div class="row">
                        @foreach (var module in Model.Modules)
                        {
                            var isChecked = allowedModules.Contains(module);
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedModules"
                                           value="@module"
                                           id="@module"
                                           @(isChecked ? "checked" : "") />
                                    <label class="form-check-label" for="@module">@module</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Save Permissions
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fa fa-arrow-left"></i> Back
                </a>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const roleDropdown = document.getElementById('RoleId');
            const checkboxes = document.querySelectorAll('.form-check-input');

            roleDropdown.addEventListener('change', function () {
                const roleId = this.value;

                // Uncheck all first
                checkboxes.forEach(cb => cb.checked = false);

                if (!roleId) return; // Skip if "-- Select Role --"

                fetch(`/Role/GetRolePermissions?roleId=${roleId}`)
                    .then(response => response.json())
                    .then(data => {
                        if (Array.isArray(data)) {
                            data.forEach(moduleName => {
                                const checkbox = document.getElementById(moduleName);
                                if (checkbox) checkbox.checked = true;
                            });
                        }
                    })
                    .catch(error => console.error('Error loading role permissions:', error));
            });
        });
    </script>
}


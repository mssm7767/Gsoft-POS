@model List<GSoftPosNew.Models.ExpenseCategory>

@{
    ViewData["Title"] = "Expense Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        :root {
            --catlist-bg: #f3f4f6;
            --catlist-muted: #6b7280;
            --catlist-accent: #0f172a;
        }

        .catlist-wrapper {
            min-height: calc(100vh - 120px);
            padding: 26px 12px 34px;
            background: radial-gradient(circle at top left, rgba(56,189,248,0.18), transparent 55%), radial-gradient(circle at bottom right, rgba(129,140,248,0.18), transparent 55%), var(--catlist-bg);
        }

        .catlist-shell {
            max-width: 980px;
            margin: 0 auto;
        }

        .catlist-card {
            border-radius: 18px;
            border: 1px solid rgba(148,163,184,0.4);
            box-shadow: 0 22px 60px rgba(15,23,42,0.22);
            overflow: hidden;
            background: radial-gradient(circle at top, #ffffff 0, #f9fafb 45%, #eef2ff 100%);
        }

        .catlist-card-header {
            background: radial-gradient(circle at top left, rgba(59,130,246,0.35), transparent 60%), linear-gradient(135deg, #3b82f6, #0ea5e9);
            padding: 14px 20px;
            color: #e0f2fe;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
        }

        .catlist-header-main {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .catlist-header-icon {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: rgba(15,23,42,0.25);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 24px rgba(15,23,42,0.45);
        }

            .catlist-header-icon i {
                font-size: 18px;
            }

        .catlist-header-title {
            margin: 0;
            font-size: 18px;
            font-weight: 700;
            letter-spacing: 0.03em;
        }

        .catlist-header-subtitle {
            margin: 0;
            font-size: 12px;
            opacity: 0.9;
        }

        .catlist-add-btn {
            border-radius: 999px !important;
            padding: 7px 14px !important;
            font-size: 13px !important;
            font-weight: 600 !important;
            border: 1px solid rgba(15,23,42,0.12) !important;
            background: #f9fafb !important;
            color: #0f172a !important;
            box-shadow: 0 8px 20px rgba(15,23,42,0.18);
        }

            .catlist-add-btn:hover {
                background: #e5e7eb !important;
            }

        .catlist-card-body {
            padding: 16px 18px 18px;
        }

        .catlist-table-wrapper {
            border-radius: 14px;
            border: 1px solid rgba(148,163,184,0.4);
            overflow: hidden;
            background: #ffffff;
        }

        .catlist-table {
            margin-bottom: 0;
            font-size: 13px;
        }

            .catlist-table thead {
                font-size: 12px;
                text-transform: uppercase;
                letter-spacing: 0.08em;
            }

                .catlist-table thead tr th {
                    padding-top: 9px;
                    padding-bottom: 9px;
                    background: linear-gradient(180deg, #eef2ff, #e0f2fe);
                    border-bottom: 1px solid rgba(148,163,184,0.8);
                    white-space: nowrap;
                }

            .catlist-table tbody tr td {
                padding-top: 8px;
                padding-bottom: 8px;
                vertical-align: middle;
                border-bottom: 1px dashed rgba(148,163,184,0.5);
            }

            .catlist-table tbody tr:nth-child(even) td {
                background-color: #f9fafb;
            }

            .catlist-table tbody tr:hover td {
                background: rgba(219,234,254,0.9);
            }

        .catlist-actions .btn {
            border-radius: 999px;
            padding: 4px 9px;
            font-size: 12px;
        }

        .catlist-actions .btn-warning {
            background: #facc15;
            border-color: #eab308;
            color: #713f12;
        }

            .catlist-actions .btn-warning:hover {
                background: #eab308;
            }

        .catlist-actions .btn-danger {
            background: #ef4444;
            border-color: #dc2626;
        }

            .catlist-actions .btn-danger:hover {
                background: #dc2626;
            }
    </style>
}

<div class="catlist-wrapper">
    <div class="catlist-shell">
        <div class="catlist-card card shadow-sm border-0">
            <div class="catlist-card-header">
                <div class="catlist-header-main">
                    <div class="catlist-header-icon">
                        <i class="fa fa-folder"></i>
                    </div>
                    <div>
                        <h5 class="catlist-header-title mb-1">Expense Categories</h5>
                        <p class="catlist-header-subtitle mb-0">
                            List of all categories used to classify expenses.
                        </p>
                    </div>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-light btn-sm fw-semibold catlist-add-btn">
                        <i class="fa fa-plus-circle me-1"></i> Add Category
                    </a>
                </div>
            </div>

            <div class="catlist-card-body card-body p-3">
                @if (Model != null && Model.Any())
                {
                    <div class="catlist-table-wrapper">
                        <table class="table table-hover mb-0 catlist-table">
                            <thead>
                                <tr>
                                    <th>Category Name</th>
                                    <th>Description</th>
                                    <th>Expense For</th>
                                    <th>Created By</th>
                                    <th style="width:130px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Description</td>
                                        <td>@item.ExpenseFor</td>
                                        <td>@item.CreatedBy</td>
                                        <td class="catlist-actions">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-danger"
                                               onclick="return confirm('Delete this category?');"
                                               title="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-3">
                        <em class="text-muted"><i class="fa fa-info-circle me-1"></i> No expense categories found.</em>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

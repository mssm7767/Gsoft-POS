@model GSoftPosNew.ViewModels.SupplierPurchasesReportVM

<div class="report-container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>
                <i class="fas fa-file-invoice-dollar me-2"></i>
                Purchases for @Model.SupplierName
            </h4>
        </div>
        <div class="card-body">
            <form method="get" class="mb-4">
                <input type="hidden" name="supplierId" value="@Model.SupplierId" />
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Start Date</label>
                        <input name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")"
                               class="form-control" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">End Date</label>
                        <input name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")"
                               class="form-control" type="date" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Reference</th>
                            <th>Status</th>
                            <th class="text-end">Items</th>
                            <th class="text-end">Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var purchase in Model.Purchases)
                        {
                            <tr>
                                <td>@purchase.Date.ToString("d")</td>
                                <td>@purchase.ReferenceNo</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(purchase.Status)">
                                        @purchase.Status
                                    </span>
                                </td>
                                <td class="text-end">@purchase.ItemCount</td>
                                <td class="text-end">@purchase.TotalAmount.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Paid" => "bg-success",
            "Pending" => "bg-warning text-dark",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary",
        };
    }
}
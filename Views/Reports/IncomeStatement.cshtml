<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Income Statement — POS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #f3f4f6;
            --card: #ffffff;
            --muted: #6b7280;
            --accent: #0f172a;
            --primary: #0ea5a4;
            --success: #10b981;
            --danger: #ef4444;
            --glass: rgba(15,23,42,0.05);
            font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 24px;
            background: radial-gradient(circle at top, #e5f3ff 0, #f3f4f6 42%, #eef2ff 100%);
            color: var(--accent);
            -webkit-font-smoothing: antialiased;
        }

        .container-fluid {
            max-width: 1120px;
            margin: 0 auto;
            background: linear-gradient(180deg, #ffffff 0%, #f9fafb 55%, #f3f4f6 100%);
            border-radius: 18px;
            padding: 22px 24px 30px;
            box-shadow: 0 24px 70px rgba(15, 23, 42, 0.16);
            border: 1px solid rgba(148, 163, 184, 0.25);
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 18px;
            padding-bottom: 14px;
            border-bottom: 1px solid rgba(148, 163, 184, 0.35);
        }

        .brand {
            display: flex;
            gap: 14px;
            align-items: center;
        }

        .mainlogo {
            width: 60px;
            height: 60px;
            border-radius: 16px;
            display: grid;
            place-items: center;
            background: radial-gradient(circle at 10% 0, #22d3ee 0, var(--primary) 40%, #0369a1 100%);
            color: white;
            font-weight: 700;
            font-size: 18px;
            box-shadow: 0 10px 26px rgba(8, 47, 73, 0.35);
            overflow: hidden;
        }

            .mainlogo img {
                height: 44px;
                width: auto;
                border-radius: 10px;
                object-fit: contain;
                display: block;
            }

        h1 {
            font-size: 22px;
            margin: 0 0 4px;
            letter-spacing: 0.02em;
        }

        .meta {
            color: var(--muted);
            font-size: 13px;
        }

        .controls {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .btn {
            background: linear-gradient(135deg, var(--primary), #22c1c3);
            color: #f9fafb;
            padding: 9px 15px;
            border-radius: 999px;
            border: 1px solid rgba(15, 23, 42, 0.08);
            cursor: pointer;
            font-weight: 600;
            font-size: 13px;
            letter-spacing: 0.02em;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            box-shadow: 0 10px 25px rgba(8, 47, 73, 0.25);
            transition: transform 0.12s ease, box-shadow 0.12s ease, background 0.12s ease;
        }

            .btn:hover {
                transform: translateY(-1px);
                box-shadow: 0 14px 32px rgba(8, 47, 73, 0.35);
                background: linear-gradient(135deg, #0f9f9e, #0891b2);
            }

            .btn:active {
                transform: translateY(0);
                box-shadow: 0 6px 16px rgba(8, 47, 73, 0.25);
            }

            .btn.ghost {
                background: #ffffff;
                border: 1px solid rgba(15, 23, 42, 0.08);
                color: var(--accent);
                box-shadow: 0 4px 12px rgba(148, 163, 184, 0.25);
            }

                .btn.ghost:hover {
                    background: #f3f4f6;
                }

        .panel {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 14px;
            margin-top: 22px;
        }

        .card {
            background: var(--card);
            padding: 16px 16px 14px;
            border-radius: 14px;
            box-shadow: 0 10px 25px rgba(15, 23, 42, 0.08);
            border: 1px solid rgba(148, 163, 184, 0.35);
            position: relative;
            overflow: hidden;
        }

            .card::after {
                content: "";
                position: absolute;
                inset: 0;
                background: radial-gradient(circle at top right, rgba(56, 189, 248, 0.14), transparent 50%);
                opacity: 0.8;
                pointer-events: none;
            }

            .card small {
                color: var(--muted);
                display: block;
                font-size: 11px;
                text-transform: uppercase;
                letter-spacing: 0.09em;
            }

            .card h2 {
                margin: 10px 0 0;
                font-size: 19px;
                position: relative;
                z-index: 1;
                font-weight: 700;
            }

        .report {
            display: grid;
            grid-template-columns: 1fr 320px;
            gap: 20px;
            margin-top: 22px;
        }

        .report-main {
            background: var(--card);
            padding: 18px 18px 20px;
            border-radius: 14px;
            box-shadow: 0 14px 32px rgba(15, 23, 42, 0.12);
            border: 1px solid rgba(148, 163, 184, 0.35);
        }

        .filters {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            margin-bottom: 16px;
            padding: 8px 10px;
            border-radius: 10px;
            background: radial-gradient(circle at left, rgba(56, 189, 248, 0.06), transparent 55%);
        }

        .field {
            display: flex;
            flex-direction: column;
        }

            .field label {
                font-size: 11px;
                color: var(--muted);
                margin-bottom: 4px;
                text-transform: uppercase;
                letter-spacing: 0.08em;
            }

            .field input {
                padding: 8px 10px;
                border-radius: 8px;
                border: 1px solid rgba(148, 163, 184, 0.8);
                min-width: 160px;
                font-size: 13px;
                background: linear-gradient(180deg, #ffffff, #f9fafb);
                outline: none;
                transition: border-color 0.12s ease, box-shadow 0.12s ease, background 0.12s ease;
            }

                .field input:focus {
                    border-color: var(--primary);
                    box-shadow: 0 0 0 1px rgba(34, 211, 238, 0.35);
                    background: #ffffff;
                }

        section h3 {
            margin: 0 0 8px;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.13em;
            color: #4b5563;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 4px;
            font-size: 13px;
            font-variant-numeric: tabular-nums;
        }

        thead th {
            background: linear-gradient(180deg, #f9fafb, #eef2ff);
            font-weight: 600;
            text-align: left;
            padding: 9px 10px;
            border-bottom: 1px solid rgba(148, 163, 184, 0.6);
            color: #111827;
            white-space: nowrap;
        }

        tbody td {
            padding: 9px 10px;
            border-bottom: 1px dashed rgba(148, 163, 184, 0.45);
            vertical-align: middle;
        }

        tbody tr:nth-child(even) td {
            background: rgba(249, 250, 251, 0.8);
        }

        tbody tr:hover td {
            background: rgba(219, 234, 254, 0.65);
        }

        .text-right {
            text-align: right;
        }

        .muted {
            color: var(--muted);
            font-size: 13px;
        }

        .summary {
            margin-top: 18px;
            padding: 14px 14px 10px;
            border-radius: 12px;
            background: radial-gradient(circle at top left, rgba(34, 197, 94, 0.08), transparent 50%), linear-gradient(180deg, #ffffff, #eff6ff);
            display: flex;
            flex-direction: column;
            gap: 4px;
            border: 1px solid rgba(15, 118, 110, 0.25);
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5px 0;
            font-size: 13px;
        }

            .summary-row.total {
                font-size: 17px;
                font-weight: 700;
                border-top: 1px solid rgba(15, 23, 42, 0.18);
                margin-top: 6px;
                padding-top: 8px;
            }

                .summary-row.total > div:last-child {
                    color: #16a34a;
                }

        .side {
            background: var(--card);
            padding: 16px 16px 14px;
            border-radius: 14px;
            box-shadow: 0 14px 32px rgba(15, 23, 42, 0.12);
            border: 1px solid rgba(148, 163, 184, 0.35);
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

            .side h4 {
                margin: 0 0 6px;
                font-size: 14px;
                text-transform: uppercase;
                letter-spacing: 0.12em;
                color: #4b5563;
            }

        .legend {
            display: flex;
            gap: 10px;
            align-items: center;
            margin-bottom: 6px;
        }

        .dot {
            width: 10px;
            height: 10px;
            border-radius: 999px;
        }

        .small-note {
            font-size: 13px;
            color: var(--muted);
        }

        footer {
            margin-top: 18px;
            text-align: center;
            color: var(--muted);
            font-size: 13px;
        }

        /* responsive */
        @@media (max-width:900px) {
            body {
                padding: 14px;
            }

            .container-fluid {
                padding: 16px 14px 22px;
                border-radius: 14px;
            }

            .panel {
                grid-template-columns: repeat(2, 1fr);
            }

            .report {
                grid-template-columns: 1fr;
            }

            .panel .card h2 {
                font-size: 17px;
            }

            .header {
                flex-direction: column;
                align-items: flex-start;
            }

            .controls {
                width: 100%;
                justify-content: flex-start;
                flex-wrap: wrap;
            }
        }

        @@media (max-width:520px) {
            .panel {
                grid-template-columns: 1fr;
            }

            .filters {
                padding: 8px;
            }

            .field input {
                min-width: 0;
                width: 100%;
            }

            .report {
                gap: 16px;
            }
        }

        /* PRINT STYLES */
        @@media print {
            @@page {
                size: A4 portrait;
                margin: 20mm;
            }

            body {
                background: #fff !important;
                color: #000 !important;
                font-family: "Inter", "Segoe UI", Arial, sans-serif;
                padding: 0;
            }

            .btn,
            .navbar,
            .sidebar,
            .filters,
            .filter-bar,
            .filter-section,
            .search-bar,
            header,
            footer,
            aside.side {
                display: none !important;
                visibility: hidden !important;
            }

            #printArea {
                visibility: visible !important;
                background: #fff !important;
                padding: 0;
                margin: 0 auto;
                width: 100%;
                box-shadow: none;
                border-radius: 0;
                border: none;
            }

                #printArea * {
                    visibility: visible !important;
                    color: #000 !important;
                }

            .header {
                border-bottom: 2px solid #000;
                padding-bottom: 10px;
                margin-bottom: 18px;
                justify-content: space-between;
            }

            .mainlogo {
                box-shadow: none;
                border-radius: 6px;
                background: transparent;
            }

                .mainlogo img {
                    height: 40px !important;
                    width: auto;
                    border-radius: 4px;
                }

            .brand h1 {
                font-size: 20px;
                font-weight: 700;
                margin-bottom: 4px;
            }

            .meta {
                font-size: 12px;
                color: #444 !important;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 8px;
                font-size: 12px;
            }

            thead th {
                background: #f0f0f0 !important;
                border: 1px solid #999;
                padding: 7px 8px;
                text-align: left;
            }

            tbody td {
                border: 1px solid #999;
                padding: 7px 8px;
            }

            .text-right {
                text-align: right;
            }

            .summary {
                margin-top: 16px;
                padding: 10px 12px;
                border: 1px solid #000;
                border-radius: 6px;
                background: #f9f9f9 !important;
            }

            .summary-row {
                display: flex;
                justify-content: space-between;
                padding: 4px 0;
            }

                .summary-row.total {
                    font-weight: bold;
                    font-size: 15px;
                    border-top: 2px solid #000;
                    margin-top: 8px;
                    padding-top: 6px;
                }

            .card,
            .report-main {
                box-shadow: none !important;
                border: 1px solid #ccc !important;
            }

            h3 {
                font-size: 14px;
                margin-bottom: 4px;
                border-bottom: 1px solid #000;
                padding-bottom: 3px;
            }

            .report {
                grid-template-columns: 1fr !important;
            }

            @@bottom-right {
                content: "Page " counter(page);
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid" id="printArea">
        <div class="header">
            <div class="brand">
                <div class="mainlogo">
                    <img src="@(!string.IsNullOrEmpty(ViewBag.Setting.LogoPath)
                                                 ? Url.Content(ViewBag.Setting.LogoPath)
                                                 : Url.Content("~/images/gsoftLogo.jpeg"))"
                         alt="Shop Logo">
                </div>

                <div>
                    <h1>Income Statement</h1>
                    <div class="meta">Total — Period summary • Currency: PKR</div>
                </div>
            </div>

            <div class="controls">
                <button class="btn" onclick="printReport()">Export / Print</button>
                <button class="btn ghost" onclick="downloadCSV()">Export CSV</button>
            </div>
        </div>

        <div class="panel" aria-hidden>
            <div class="card">
                <small>Total Sales</small>
                <h2 id="totalSales">Rs. 150,000.00</h2>
            </div>
            <div class="card">
                <small>Total Discounts</small>
                <h2 id="totalDiscounts">Rs. @ViewBag.TotalDiscount</h2>
            </div>
            @* <div class="card">
                <small>Total Purchase</small>
                <h2 id="totalDiscounts">Rs. @ViewBag.TotalPurchase</h2>
            </div> *@
            <div class="card">
                <small>Total Expenses</small>
                <h2 id="totalExpenses">Rs. 35,000.00</h2>
            </div>
            <div class="card">
                <small>Net Profit</small>
                <h2 id="netProfitMain">Rs. 110,000.00</h2>
            </div>
        </div>

        <div class="report">
            <div class="report-main">
                <div class="filters">
                    <div class="field">
                        <label>Start Date</label>
                        <input type="date" id="startDate">
                    </div>
                    <div class="field">
                        <label>End Date</label>
                        <input type="date" id="endDate">
                    </div>
                    <div class="field">
                        <label>&nbsp;</label>
                        <button class="btn" onclick="applyFilter()">Apply</button>
                    </div>
                </div>

                <section>
                    <h3>Revenue</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Item / Category</th>
                                <th class="text-right">Amount (Rs.)</th>
                            </tr>
                        </thead>
                        <tbody id="revenueBody">
                            <tr>
                                <td>Product Sales</td>
                                <td class="text-right">@ViewBag.TotalSales</td>
                            </tr>
                            @* <tr><td>Service Income</td><td class="text-right">30,000.00</td></tr> *@
                        </tbody>
                    </table>
                </section>

                <section style="margin-top:18px">
                    <h3>Purchase</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Item / Category</th>
                                <th class="text-right">Amount (Rs.)</th>
                            </tr>
                        </thead>
                        <tbody id="purchaseBody">
                            <tr>
                                <td>Product Purchase</td>
                                <td class="text-right">@ViewBag.TotalPurchase</td>
                            </tr>
                        </tbody>
                    </table>
                </section>

                <section style="margin-top:18px">
                    <h3>Expenses</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Expense Type</th>
                                <th class="text-right">Amount (Rs.)</th>
                            </tr>
                        </thead>
                        <tbody id="expenseBody">
                            @if (@ViewBag.ExpenseSummary != null)
                            {
                                @foreach (var e in ViewBag.ExpenseSummary)
                                {
                                    <tr>
                                        <td>@e.CategoryName</td>
                                        <td class="text-right">@e.TotalAmount</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </section>

                <div class="summary" aria-label="summary">
                    <div class="summary-row">
                        <div class="muted">Net Sales</div>
                        <div id="netSales">Rs. 0.00</div>
                    </div>
                    <div class="summary-row">
                        <div class="muted">Net Purchase</div>
                        <div id="netPurchase">Rs. @ViewBag.TotalPurchase</div>
                    </div>
                    <div class="summary-row total">
                        <div class="muted">Gross Profit</div>
                        <div id="finalProfit">Rs. 0.00</div>
                    </div>
                    <div class="summary-row ">
                        <div class="muted">Total Expenses</div>
                        <div id="sumExpenses">Rs. 0.00</div>
                    </div>
                    <div class="summary-row total">
                        <div>Net Profit</div>
                        <div id="netProfit">Rs. 0.00</div>
                    </div>
                </div>

            </div>

            <aside class="side">
                <h4>Quick Insights</h4>
                <div class="small-note">
                    Profit margin:
                    <strong id="profitMargin">75.86%</strong>
                </div>

                <div style="height:8px"></div>

                <div class="legend">
                    <div class="dot" style="background:var(--primary)"></div>
                    <div class="small-note">Revenue</div>
                </div>
                <div class="legend">
                    <div class="dot" style="background:var(--danger)"></div>
                    <div class="small-note">Expenses</div>
                </div>

                <div style="height:10px"></div>

                <div class="small-note">
                    Report generated:
                    <strong id="generatedAt"></strong>
                </div>
                <div class="small-note">
                    Prepared by:
                    <strong>@(@ViewBag.Setting?.ShopName ?? "G-Soft")</strong>
                </div>
            </aside>
        </div>
    </div>

    <script>
        // sample dynamic calculations (replace with server data in production)
        function fmt(n) {
            return Number(n).toLocaleString('en-PK', {
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            });
        }

        function recalc() {
            const revenueRows = Array.from(document.querySelectorAll('#revenueBody tr'));
            const purchaseRows = Array.from(document.querySelectorAll('#purchaseBody tr'));
            const expenseRows = Array.from(document.querySelectorAll('#expenseBody tr'));

            const totalRevenue = revenueRows.reduce((s, row) => s + parseFloat(row.cells[1].innerText.replace(/,/g, '')), 0);
            const totalPurchase = purchaseRows.reduce((s, row) => s + parseFloat(row.cells[1].innerText.replace(/,/g, '')), 0);
            const totalExpenses = expenseRows.reduce((s, row) => s + parseFloat(row.cells[1].innerText.replace(/,/g, '')), 0);

            const totalDiscounts = Number('@ViewBag.TotalDiscount');

            const netSales = totalRevenue - totalDiscounts;
            const grossProfit = netSales - totalPurchase;
            const netProfit = grossProfit - totalExpenses;
            const margin = netSales > 0 ? (netProfit / netSales * 100) : 0;

            document.getElementById('totalSales').innerText = 'Rs. ' + fmt(totalRevenue);
            document.getElementById('totalExpenses').innerText = 'Rs. ' + fmt(totalExpenses);
            document.getElementById('netSales').innerText = 'Rs. ' + fmt(netSales);
            document.getElementById('sumExpenses').innerText = 'Rs. ' + fmt(totalExpenses);
            document.getElementById('finalProfit').innerText = 'Rs. ' + fmt(grossProfit);
            document.getElementById('netProfit').innerText = 'Rs. ' + fmt(netProfit);
            document.getElementById('netProfitMain').innerText = 'Rs. ' + fmt(netProfit);
            document.getElementById('profitMargin').innerText = fmt(margin) + '%';
            document.getElementById('generatedAt').innerText = (new Date()).toLocaleString();
        }

        function applyFilter() {
            // placeholder: in real app call server to fetch filtered data
            // here we just recalc using existing numbers
            recalc();
        }

        function downloadCSV() {
            const rows = [
                ['Description', 'Amount (Rs.)'],
                ['Total Sales', document.getElementById('totalSales').innerText.replace('Rs. ', '')],
                ['Total Discounts', document.getElementById('totalDiscounts').innerText.replace('Rs. ', '')],
                ['Total Expenses', document.getElementById('totalExpenses').innerText.replace('Rs. ', '')],
                ['Gross Profit', document.getElementById('grossProfit').innerText.replace('Rs. ', '')]
            ];

            let csv = rows
                .map(r => r.map(c => '"' + (c + '').replace(/"/g, '""') + '"').join(','))
                .join('\n');

            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'income-statement.csv';
            document.body.appendChild(a);
            a.click();
            a.remove();
            URL.revokeObjectURL(url);
        }

        // initial run
        recalc();

        function printReport() {
            var printContents = document.getElementById("printArea").innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
            location.reload(); // Reload to restore scripts and layout
        }
    </script>
</body>
</html>


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Income Statement — POS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #f6f8fb;
            --card: #ffffff;
            --muted: #6b7280;
            --accent: #0f172a;
            --primary: #0ea5a4;
            --success: #10b981;
            --danger: #ef4444;
            --glass: rgba(15,23,42,0.04);
            font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
        }

        * {
            box-sizing: border-box
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px
        }

        .brand {
            display: flex;
            gap: 14px;
            align-items: center
        }

        .mainlogo {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            display: grid;
            place-items: center;
            background: linear-gradient(135deg,var(--primary),#7dd3fc);
            color: white;
            font-weight: 700;
            font-size: 18px
        }

            .mainlogo img {
                height: 45px;
                width: auto;
                border-radius: 6px;
                object-fit: contain;
            }


        h1 {
            font-size: 20px;
            margin: 0
        }

        .meta {
            color: var(--muted);
            font-size: 13px
        }

        .controls {
            display: flex;
            gap: 10px;
            align-items: center
        }

        .btn {
            background: var(--primary);
            color: #053;
            padding: 10px 14px;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            font-weight: 600
        }

            .btn.ghost {
                background: transparent;
                border: 1px solid rgba(15,23,42,0.06);
                color: var(--accent)
            }

        .panel {
            display: grid;
            grid-template-columns: repeat(4,1fr);
            gap: 14px;
            margin-top: 22px
        }

        .card {
            background: var(--card);
            padding: 18px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(11,23,39,0.04);
            border: 1px solid var(--glass)
        }

            .card small {
                color: var(--muted);
                display: block
            }

            .card h2 {
                margin: 8px 0 0;
                font-size: 20px
            }

        .report {
            display: grid;
            grid-template-columns: 1fr 360px;
            gap: 20px;
            margin-top: 22px
        }

        .report-main {
            background: var(--card);
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(11,23,39,0.04);
            border: 1px solid var(--glass)
        }

        .filters {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-bottom: 18px
        }

        .field {
            display: flex;
            flex-direction: column
        }

            .field label {
                font-size: 12px;
                color: var(--muted);
                margin-bottom: 6px
            }

            .field input {
                padding: 10px;
                border-radius: 8px;
                border: 1px solid rgba(11,23,39,0.06);
                min-width: 160px
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 6px
        }

        thead th {
            background: linear-gradient(180deg,#fbfdff,#f7fbfb);
            font-weight: 600;
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid rgba(11,23,39,0.06)
        }

        tbody td {
            padding: 12px;
            border-bottom: 1px dashed rgba(11,23,39,0.04);
            vertical-align: middle
        }

        .text-right {
            text-align: right
        }

        .muted {
            color: var(--muted);
            font-size: 13px
        }

        .summary {
            margin-top: 18px;
            padding: 14px;
            border-radius: 10px;
            background: linear-gradient(180deg,#fff,#fbffff);
            display: flex;
            flex-direction: column;
            gap: 6px
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 6px 0
        }

            .summary-row.total {
                font-size: 18px;
                font-weight: 700
            }

        .side {
            background: var(--card);
            padding: 18px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(11,23,39,0.04);
            border: 1px solid var(--glass)
        }

        .legend {
            display: flex;
            gap: 10px;
            align-items: center;
            margin-bottom: 12px
        }

        .dot {
            width: 10px;
            height: 10px;
            border-radius: 50%
        }

        .small-note {
            font-size: 13px;
            color: var(--muted)
        }

        footer {
            margin-top: 18px;
            text-align: center;
            color: var(--muted);
            font-size: 13px
        }

        /* responsive */
        @@media (max-width:900px) {
            .panel {
                grid-template-columns: repeat(2,1fr)
            }

            .report {
                grid-template-columns: 1fr
            }

            .panel .card h2 {
                font-size: 18px
            }
        }

        @@media (max-width:520px) {
            .panel {
                grid-template-columns: 1fr
            }
        }

        /* PRINT STYLES */
        @@media print {
            @@page {
                size: A4 portrait;
                margin: 20mm;
            }

            body {
                background: #fff !important;
                color: #000 !important;
                font-family: "Inter", "Segoe UI", Arial, sans-serif;
            }
            /* Hide unwanted layout elements */
            .btn,
            .navbar,
            .sidebar,
            .filters,
            .filter-bar,
            .filter-section,
            .search-bar,
            header,
            footer,
            aside.side {
                display: none !important;
                visibility: hidden !important;
            }
            /* Show only printable area */
            #printArea {
                visibility: visible !important;
                background: #fff !important;
                padding: 20px 30px;
                margin: 0 auto;
                width: 100%;
                box-shadow: none;
            }

                #printArea * {
                    visibility: visible !important;
                    color: #000 !important;
                }
            /* Header Styling */
            .header {
                border-bottom: 2px solid #000;
                padding-bottom: 10px;
                margin-bottom: 25px;
                justify-content: space-between;
            }

            .mainlogo img {
                height: 40px !important;
                width: auto;
                border-radius: 4px;
            }

            .brand h1 {
                font-size: 20px;
                font-weight: 700;
                margin-bottom: 4px;
            }

            .meta {
                font-size: 12px;
                color: #444 !important;
            }
            /* Tables */
            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 10px;
                font-size: 13px;
            }

            thead th {
                background: #f0f0f0 !important;
                border: 1px solid #999;
                padding: 8px;
                text-align: left;
            }

            tbody td {
                border: 1px solid #999;
                padding: 8px;
            }

            .text-right {
                text-align: right;
            }
            /* Summary section */
            .summary {
                margin-top: 25px;
                padding: 12px;
                border: 1px solid #000;
                border-radius: 6px;
                background: #f9f9f9 !important;
            }

            .summary-row {
                display: flex;
                justify-content: space-between;
                padding: 6px 0;
            }

                .summary-row.total {
                    font-weight: bold;
                    font-size: 16px;
                    border-top: 2px solid #000;
                    margin-top: 10px;
                    padding-top: 8px;
                }
            /* Remove shadows */
            .card, .report-main {
                box-shadow: none !important;
                border: 1px solid #ccc !important;
            }
            /* Page title */
            h3 {
                font-size: 15px;
                margin-bottom: 5px;
                border-bottom: 1px solid #000;
                padding-bottom: 3px;
            }
            /* Ensure everything fits on page */
            .report {
                grid-template-columns: 1fr !important;
            }
            /* Page footer */
            @@bottom-right {
                content: "Page " counter(page);
            }
        }

    </style>
</head>
<body>
    <div class="container-fluid" id="printArea">
        <div class="header">
            <div class="brand">
                <div class="mainlogo">
                    <img src="@(!string.IsNullOrEmpty(ViewBag.Setting.LogoPath)
                        ? Url.Content(ViewBag.Setting.LogoPath)
                        : Url.Content("~/images/gsoftLogo.jpeg"))"
                         alt="Shop Logo">
                </div>

                <div>
                    <h1>Income Statement</h1>
                    <div class="meta">Total — Period summary • Currency: PKR</div>
                </div>
            </div>

            <div class="controls">
                <button class="btn" onclick="printReport()">Export / Print</button>
                <button class="btn ghost" onclick="downloadCSV()">Export CSV</button>
            </div>
        </div>

        <div class="panel" aria-hidden>
            <div class="card">
                <small>Total Sales</small>
                <h2 id="totalSales">Rs. 150,000.00</h2>
            </div>
            <div class="card">
                <small>Total Discounts</small>
                <h2 id="totalDiscounts">Rs. @ViewBag.TotalDiscount</h2>
            </div>
            <div class="card">
                <small>Total Expenses</small>
                <h2 id="totalExpenses">Rs. 35,000.00</h2>
            </div>
            <div class="card">
                <small>Gross Profit</small>
                <h2 id="grossProfit">Rs. 110,000.00</h2>
            </div>
        </div>

        <div class="report">
            <div class="report-main">
                <div class="filters">
                    <div class="field">
                        <label>Start Date</label>
                        <input type="date" id="startDate">
                    </div>
                    <div class="field">
                        <label>End Date</label>
                        <input type="date" id="endDate">
                    </div>
                    <div class="field">
                        <label>&nbsp;</label>
                        <button class="btn" onclick="applyFilter()">Apply</button>
                    </div>
                </div>

                <section>
                    <h3 style="margin:0 0 8px">Revenue</h3>
                    <table>
                        <thead>
                            <tr><th>Item / Category</th><th class="text-right">Amount (Rs.)</th></tr>
                        </thead>
                        <tbody id="revenueBody">
                            <tr><td>Product Sales</td><td class="text-right">@ViewBag.TotalSales</td></tr>
                            @* <tr><td>Service Income</td><td class="text-right">30,000.00</td></tr> *@
                        </tbody>
                    </table>
                </section>

                <section style="margin-top:18px">
                    <h3 style="margin:0 0 8px">Expenses</h3>
                    <table>
                        <thead>
                            <tr><th>Expense Type</th><th class="text-right">Amount (Rs.)</th></tr>
                        </thead>
                        <tbody id="expenseBody">
                            @if (@ViewBag.ExpenseSummary != null)
                            {
                                @foreach (var e in ViewBag.ExpenseSummary)
                                {
                                    <tr>
                                        <td>@e.CategoryName</td>
                                        <td class="text-right">@e.TotalAmount</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </section>

                <div class="summary" aria-label="summary">
                    <div class="summary-row"><div class="muted">Net Sales</div><div id="netSales">Rs. 0.00</div></div>
                    <div class="summary-row"><div class="muted">Total Expenses</div><div id="sumExpenses">Rs. 0.00</div></div>
                    <div class="summary-row total"><div>Gross Profit</div><div id="finalProfit">Rs. 0.00</div></div>
                </div>

            </div>

            <aside class="side">
                <h4 style="margin:0 0 8px">Quick Insights</h4>
                <div class="small-note">Profit margin: <strong id="profitMargin">75.86%</strong></div>
                <div style="height:12px"></div>

                <div class="legend">
                    <div class="dot" style="background:var(--primary)"></div>
                    <div class="small-note">Revenue</div>
                </div>
                <div class="legend">
                    <div class="dot" style="background:var(--danger)"></div>
                    <div class="small-note">Expenses</div>
                </div>

                <div style="height:12px"></div>
                <div class="small-note">Report generated: <strong id="generatedAt"></strong></div>
                <div style="height:6px"></div>
                <div class="small-note">Prepared by: <strong>@(@ViewBag.Setting?.ShopName ?? "G-Soft")</strong></div>

            </aside>
        </div>
    </div>

    <script>
                // sample dynamic calculations (replace with server data in production)
                function fmt(n){return Number(n).toLocaleString('en-PK',{minimumFractionDigits:2,maximumFractionDigits:2})}
                function recalc(){
                  const revenueRows = Array.from(document.querySelectorAll('#revenueBody tr'));
                  const expenseRows = Array.from(document.querySelectorAll('#expenseBody tr'));
                  const totalRevenue = revenueRows.reduce((s,row)=>s+parseFloat(row.cells[1].innerText.replace(/,/g,'')),0);
                  const totalExpenses = expenseRows.reduce((s,row)=>s+parseFloat(row.cells[1].innerText.replace(/,/g,'')),0);
                  const discounts = parseFloat(document.getElementById('totalDiscounts').innerText.replace(/[^0-9\.]/g,'')) || 0;
                  const netSales = totalRevenue - discounts;
                  const profit = netSales - totalExpenses;
                  const margin = netSales>0 ? (profit/netSales*100) : 0;

                  document.getElementById('totalSales').innerText = 'Rs. ' + fmt(totalRevenue);
                  document.getElementById('totalExpenses').innerText = 'Rs. ' + fmt(totalExpenses);
                  document.getElementById('netSales').innerText = 'Rs. ' + fmt(netSales);
                  document.getElementById('sumExpenses').innerText = 'Rs. ' + fmt(totalExpenses);
                  document.getElementById('finalProfit').innerText = 'Rs. ' + fmt(profit);
                  document.getElementById('grossProfit').innerText = 'Rs. ' + fmt(profit);
                  document.getElementById('profitMargin').innerText = fmt(margin) + '%';
                  document.getElementById('generatedAt').innerText = (new Date()).toLocaleString();
                }

                function applyFilter(){
                  // placeholder: in real app call server to fetch filtered data
                  // here we just recalc using existing numbers
                  recalc();
                }

                function downloadCSV(){
                  const rows = [['Description','Amount (Rs.)'],['Total Sales', document.getElementById('totalSales').innerText.replace('Rs. ','')],['Total Discounts', document.getElementById('totalDiscounts').innerText.replace('Rs. ','')],['Total Expenses',document.getElementById('totalExpenses').innerText.replace('Rs. ','')],['Gross Profit',document.getElementById('grossProfit').innerText.replace('Rs. ','')]];
                  let csv = rows.map(r=>r.map(c=>'"'+(c+'').replace(/"/g,'""')+'"').join(',')).join('\n');
                  const blob = new Blob([csv],{type:'text/csv;charset=utf-8;'});
                  const url = URL.createObjectURL(blob);
                  const a = document.createElement('a'); a.href = url; a.download = 'income-statement.csv'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
                }

                // initial run
                recalc();

        function printReport() {
            var printContents = document.getElementById("printArea").innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
            location.reload(); // Reload to restore scripts and layout
        }
    </script>
</body>
</html>

@using System.Globalization
@model GSoftPosNew.Models.PurchaseReport

@{
    ViewData["Title"] = "Purchase Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="report-container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-shopping-cart me-2"></i>Purchase Report
            </h4>
        </div>
        <div class="card-body">
            <form method="post" class="mb-4">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="SupplierId" class="form-label">Supplier</label>
                        <select asp-for="SupplierId"
                                asp-items="ViewBag.SupplierList"
                                class="form-control form-select form-select-sm border-start-0"
                                id="SupplierId">
                            <option value="">— Select Supplier —</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                        <a href="@Url.Action("ExportPurchasesToExcel", new { StartDate = Model.StartDate, EndDate = Model.EndDate })"
                           class="btn btn-success ms-2">
                            <i class="fas fa-file-excel me-2"></i>Excel
                        </a>
                    </div>
                </div>
            </form>

            <div class="report-summary mb-4">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card summary-card">
                            <div class="card-body text-center">
                                <h6 class="card-title">Total Purchases</h6>
                                <h3 class="text-primary">@Model.TotalPurchases.ToString("C", new CultureInfo("ur-PK"))</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card summary-card">
                            <div class="card-body text-center">
                                <h6 class="card-title">Items Purchased</h6>
                                <h3>@Model.TotalItemsPurchased</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card summary-card">
                            <div class="card-body text-center">
                                <h6 class="card-title">Suppliers</h6>
                                <h3>@Model.TotalSuppliers</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Reference #</th>
                            <th>Supplier</th>
                            <th class="text-end">Items</th>
                            <th class="text-end">Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var purchase in Model.Purchases)
                        {
                            <tr>
                                <td>@purchase.Date.ToString("MMM dd, yyyy hh:mm tt")</td>
                                <td>@purchase.ReferenceNo</td>
                                <td>@purchase.Supplier?.SupplierName</td>
                                <td class="text-end">@purchase.Items.Count</td>
                                <td class="text-end">@purchase.TotalAmount.ToString("C", new CultureInfo("ur-PK"))</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(purchase.Status)">
                                        @purchase.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", "Purchase", new { id = purchase.Id })"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Paid" => "bg-success",
            "Pending" => "bg-warning text-dark",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary",
        };
    }
}


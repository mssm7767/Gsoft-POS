@model GSoftPosNew.ViewModels.CustomerPurchasesReportVM

<div class="report-container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-user-tag me-2"></i>Customer Purchase History</h4>
            <a href="@Url.Action("CustomerSummary")" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Back to Summary
            </a>
        </div>
        <div class="card-body">
            @if (Model.Customer != null)
            {
                <div class="customer-info mb-4 p-3 bg-light rounded">
                    <h5>@Model.Customer.Name</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div><strong>Phone:</strong> @Model.Customer.Phone</div>
                        </div>
                        <div class="col-md-4">
                            <div><strong>Email:</strong> @Model.Customer.Email</div>
                        </div>
                        <div class="col-md-4">
                            <div><strong>Member Since:</strong> @Model.Customer.JoinDate.ToString("MMM dd, yyyy")</div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Invoice #</th>
                                <th class="text-end">Items</th>
                                <th class="text-end">Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sale in Model.Purchases)
                            {
                                <tr>
                                    <td>@sale.SaleDate.ToString("MMM dd, yyyy")</td>
                                    <td>@sale.InvoiceNumber</td>
                                    <td class="text-end">@sale.SaleItems.Count</td>
                                    <td class="text-end">@sale.Total.ToString("C")</td>
                                    <td>
                                        <span class="badge bg-success">Completed</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Sales", new { id = sale.Id })" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    No customer selected. Please go back to <a href="@Url.Action("CustomerSummary")">Customer Summary</a>.
                </div>
            }
        </div>
    </div>
</div>
@using System.Globalization
@model GSoftPosNew.Models.SalesReport

@{
    ViewData["Title"] = "Sales Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="report-container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-chart-line me-2"></i>Sales Report
            </h4>
        </div>
        <div class="card-body">
            <form method="post" class="mb-4">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                        <a href="@Url.Action("ExportSalesToExcel", new { StartDate = Model.StartDate, EndDate = Model.EndDate })" 
                           class="btn btn-success ms-2">
                            <i class="fas fa-file-excel me-2"></i>Excel
                        </a>
                    </div>
                </div>
            </form>

            <div class="report-summary mb-4">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card summary-card">
                            <div class="card-body text-center">
                                <h6 class="card-title">Total Sales</h6>
                                <h3 class="text-primary">
                                    @Model.TotalSales.ToString("C", new CultureInfo("ur-PK"))
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card summary-card">
                            <div class="card-body text-center">
                                <h6 class="card-title">Total Tax</h6>
                                <h3 class="text-danger">@Model.TotalTax.ToString("C", new CultureInfo("ur-PK"))</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card summary-card">
                            <div class="card-body text-center">
                                <h6 class="card-title">Total Discount</h6>
                                <h3 class="text-warning">@Model.TotalDiscount.ToString("C", new CultureInfo("ur-PK"))</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card summary-card">
                            <div class="card-body text-center">
                                <h6 class="card-title">Transactions</h6>
                                <h3>@Model.TotalTransactions</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Invoice #</th>
                            <th>Cashier</th>
                            <th class="text-end">Items</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-end">Tax</th>
                            <th class="text-end">Discount</th>
                            <th class="text-end">Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sale in Model.Sales)
                        {
                            <tr>
                                <td>@sale.SaleDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                <td>@sale.InvoiceNumber</td>
                                <td>@sale.CashierId</td>
                                <td class="text-end">@sale.SaleItems.Count</td>
                                <td class="text-end">@sale.SubTotal.ToString("C", new CultureInfo("ur-PK"))</td>
                                <td class="text-end">@sale.Tax.ToString("C", new CultureInfo("ur-PK"))</td>
                                <td class="text-end">@sale.Discount.ToString("C", new CultureInfo("ur-PK"))</td>
                                <td class="text-end">@sale.Total.ToString("C", new CultureInfo("ur-PK"))</td>
                                <td>
                                    <a href="@Url.Action("Details", "Sales", new { id = sale.Id })" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


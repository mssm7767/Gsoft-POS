@using System.Globalization
@model GSoftPosNew.Models.SalesReport

@{
    ViewData["Title"] = "Sales Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal grandSub = 0;
    decimal grandTax = 0;
    decimal grandDisc = 0;
    decimal grandTotal = 0;

    if (Model.Sales != null && Model.Sales.Any())
    {
        foreach (var sale in Model.Sales)
        {
            grandSub += sale.SubTotal;
            grandTax += sale.Tax;
            grandDisc += sale.Discount;
            grandTotal += sale.Total;
        }
    }
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

@section Styles {
    <style>
        :root {
            --primary: #4361ee;
            --primary-light: #e0e7ff;
            --primary-dark: #3730a3;
            --secondary: #8b5cf6;
            --success: #10b981;
            --success-light: #d1fae5;
            --warning: #f59e0b;
            --warning-light: #fef3c7;
            --danger: #ef4444;
            --danger-light: #fee2e2;
            --info: #0ea5e9;
            --info-light: #e0f2fe;
            --dark: #1f2937;
            --light: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-600: #6b7280;
            --gray-800: #374151;
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --radius-xl: 20px;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.05);
            --shadow-md: 0 4px 20px rgba(0,0,0,0.08);
            --shadow-lg: 0 10px 40px rgba(0,0,0,0.12);
            --shadow-xl: 0 20px 60px rgba(0,0,0,0.15);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
            color: var(--dark);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .sales-report-wrapper {
            min-height: 100vh;
            padding: 0;
            display: flex;
            flex-direction: column;
        }

        /* HEADER - MODERN GRADIENT */
        .report-header {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            padding: 24px 32px;
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
        }

            .report-header::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -30%;
                width: 300px;
                height: 300px;
                background: rgba(255,255,255,0.08);
                border-radius: 50%;
                z-index: 1;
            }

            .report-header::after {
                content: '';
                position: absolute;
                bottom: -20%;
                left: -10%;
                width: 200px;
                height: 200px;
                background: rgba(255,255,255,0.05);
                border-radius: 50%;
                z-index: 1;
            }

        .header-content {
            position: relative;
            z-index: 2;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-icon-wrapper {
            width: 70px;
            height: 70px;
            background: rgba(255,255,255,0.15);
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.25);
        }

            .header-icon-wrapper i {
                font-size: 32px;
                color: white;
            }

        .header-text {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .header-title {
            font-size: 28px;
            font-weight: 700;
            margin: 0;
            letter-spacing: -0.5px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .header-subtitle {
            font-size: 15px;
            opacity: 0.9;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .header-date-range {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 6px 14px;
            background: rgba(255,255,255,0.12);
            border-radius: var(--radius-md);
            font-size: 14px;
            margin-top: 4px;
        }

        .header-right {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 8px;
        }

        .report-status {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 6px 14px;
            background: rgba(255,255,255,0.1);
            border-radius: var(--radius-md);
            font-size: 13px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
        }

            .report-status i {
                font-size: 12px;
            }

        /* FILTER SECTION */
        .filter-section {
            background: white;
            border-radius: var(--radius-lg);
            padding: 24px;
            margin: 24px 32px;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--gray-200);
        }

        .filter-title {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--dark);
            padding-bottom: 12px;
            border-bottom: 2px solid var(--gray-100);
        }

            .filter-title i {
                color: var(--primary);
                font-size: 20px;
            }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .filter-label {
            font-size: 13px;
            font-weight: 600;
            color: var(--gray-600);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .filter-label i {
                font-size: 14px;
            }

        .filter-input {
            padding: 12px 16px;
            border: 1px solid var(--gray-300);
            border-radius: var(--radius-md);
            font-size: 14px;
            transition: var(--transition);
            background: white;
        }

            .filter-input:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
            }

        .filter-actions {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
            padding-top: 20px;
            border-top: 1px solid var(--gray-200);
        }

        .btn {
            padding: 12px 28px;
            border-radius: var(--radius-md);
            font-size: 14px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            text-decoration: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(67, 97, 238, 0.3);
            }

        .btn-success {
            background: linear-gradient(135deg, var(--success) 0%, #0d9c6d 100%);
            color: white;
        }

            .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
            }

        .btn-secondary {
            background: white;
            color: var(--dark);
            border: 1px solid var(--gray-300);
        }

            .btn-secondary:hover {
                background: var(--gray-100);
                border-color: var(--gray-400);
            }

        /* SUMMARY CARDS - MODERN DESIGN */
        .summary-section {
            padding: 0 32px;
            margin-bottom: 32px;
        }

        .summary-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .summary-card {
            background: white;
            border-radius: var(--radius-lg);
            padding: 28px;
            box-shadow: var(--shadow-md);
            border: 1px solid var(--gray-200);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

            .summary-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-lg);
            }

            .summary-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
            }

            .summary-card:nth-child(1)::before {
                background: var(--primary);
            }

            .summary-card:nth-child(2)::before {
                background: var(--danger);
            }

            .summary-card:nth-child(3)::before {
                background: var(--warning);
            }

            .summary-card:nth-child(4)::before {
                background: var(--success);
            }

        .summary-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .summary-info {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .summary-label {
            font-size: 14px;
            color: var(--gray-600);
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .summary-value {
            font-size: 32px;
            font-weight: 800;
            color: var(--dark);
            line-height: 1;
        }

        .summary-icon {
            width: 60px;
            height: 60px;
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .summary-card:nth-child(1) .summary-icon {
            background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
            color: var(--primary);
        }

        .summary-card:nth-child(2) .summary-icon {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: var(--danger);
        }

        .summary-card:nth-child(3) .summary-icon {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: var(--warning);
        }

        .summary-card:nth-child(4) .summary-icon {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: var(--success);
        }

        /* TABLE SECTION */
        .table-section {
            padding: 0 32px 32px;
            flex: 1;
        }

        .table-container {
            background: white;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            border: 1px solid var(--gray-200);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .table-header {
            padding: 20px 24px;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--gray-50);
        }

        .table-title {
            font-size: 18px;
            font-weight: 600;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .table-title i {
                color: var(--primary);
            }

        .table-stats {
            display: flex;
            gap: 16px;
            font-size: 14px;
            color: var(--gray-600);
        }

            .table-stats span {
                display: flex;
                align-items: center;
                gap: 5px;
            }

        .table-wrapper {
            overflow-x: auto;
            flex: 1;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 1000px;
        }

            .data-table thead {
                background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
                border-bottom: 2px solid var(--gray-300);
                position: sticky;
                top: 0;
                z-index: 10;
            }

            .data-table th {
                padding: 16px 20px;
                text-align: left;
                font-weight: 600;
                color: var(--gray-800);
                font-size: 12px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                white-space: nowrap;
                border-bottom: 2px solid var(--gray-300);
            }

            .data-table tbody tr {
                border-bottom: 1px solid var(--gray-200);
                transition: var(--transition);
            }

                .data-table tbody tr:hover {
                    background: linear-gradient(90deg, rgba(67, 97, 238, 0.04) 0%, rgba(67, 97, 238, 0.02) 100%);
                }

            .data-table td {
                padding: 16px 20px;
                font-size: 14px;
                color: var(--dark);
                vertical-align: middle;
            }

        .invoice-badge {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary);
            padding: 6px 12px;
            border-radius: var(--radius-sm);
            font-weight: 600;
            font-size: 13px;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .cashier-badge {
            background: rgba(139, 92, 246, 0.1);
            color: var(--secondary);
            padding: 6px 12px;
            border-radius: var(--radius-sm);
            font-size: 13px;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .view-btn {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary);
            border: none;
            padding: 8px 16px;
            border-radius: var(--radius-sm);
            font-size: 13px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            transition: var(--transition);
            text-decoration: none;
        }

            .view-btn:hover {
                background: var(--primary);
                color: white;
                transform: translateY(-1px);
            }

        .empty-state {
            padding: 60px 20px;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 300px;
        }

        .empty-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #f1f3f5 0%, #e9ecef 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 32px;
            color: var(--gray-600);
        }

        .empty-title {
            font-size: 18px;
            font-weight: 600;
            color: var(--gray-800);
            margin-bottom: 8px;
        }

        .empty-subtitle {
            font-size: 14px;
            color: var(--gray-600);
            max-width: 400px;
            margin: 0 auto;
        }

        .table-footer {
            padding: 20px 24px;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-top: 2px solid var(--gray-300);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .footer-label {
            font-size: 16px;
            font-weight: 700;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .footer-values {
            display: flex;
            gap: 32px;
        }

        .footer-value {
            font-size: 16px;
            font-weight: 700;
            text-align: right;
        }

            .footer-value:nth-child(1) {
                color: var(--primary);
            }

            .footer-value:nth-child(2) {
                color: var(--danger);
            }

            .footer-value:nth-child(3) {
                color: var(--warning);
            }

            .footer-value:nth-child(4) {
                color: var(--success);
            }

        /* RESPONSIVE DESIGN */
        @@media (max-width: 1200px) {
            .summary-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .footer-values {
                flex-wrap: wrap;
                gap: 20px;
            }
        }

        @@media (max-width: 768px) {
            .report-header {
                padding: 20px;
            }

            .header-content {
                flex-direction: column;
                gap: 20px;
            }

            .header-left {
                width: 100%;
            }

            .header-right {
                width: 100%;
                align-items: flex-start;
            }

            .filter-section, .summary-section, .table-section {
                padding: 0 20px 20px;
                margin: 20px;
            }

            .summary-grid {
                grid-template-columns: 1fr;
            }

            .filter-grid {
                grid-template-columns: 1fr;
            }

            .filter-actions {
                flex-direction: column;
            }

            .table-header {
                flex-direction: column;
                gap: 12px;
                align-items: flex-start;
            }

            .table-stats {
                flex-wrap: wrap;
            }

            .footer-values {
                flex-direction: column;
                gap: 10px;
                align-items: flex-end;
            }
        }

        /* ANIMATIONS */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .report-header, .filter-section, .summary-card, .table-container {
            animation: fadeInUp 0.6s ease-out;
        }

            .summary-card:nth-child(2) {
                animation-delay: 0.1s;
            }

            .summary-card:nth-child(3) {
                animation-delay: 0.2s;
            }

            .summary-card:nth-child(4) {
                animation-delay: 0.3s;
            }
    </style>
}

<div class="sales-report-wrapper">
    <!-- HEADER SECTION -->
    <div class="report-header">
        <div class="header-content">
            <div class="header-left">
                <div class="header-icon-wrapper">
                    <i class="fas fa-chart-pie"></i>
                </div>
                <div class="header-text">
                    <h1 class="header-title">
                        Sales Analytics Report
                    </h1>
                    <div class="header-subtitle">
                        <i class="fas fa-chart-line"></i>
                        Comprehensive sales performance analysis
                    </div>
                    <div class="header-date-range">
                        <i class="fas fa-calendar-alt"></i>
                        @Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")
                    </div>
                </div>
            </div>
            <div class="header-right">
                <div class="report-status">
                    <i class="fas fa-sync-alt"></i>
                    Real-time Data
                </div>
                <div class="report-status">
                    <i class="fas fa-clock"></i>
                    Generated: @DateTime.Now.ToString("dd MMM yyyy HH:mm")
                </div>
            </div>
        </div>
    </div>

    <!-- FILTER SECTION -->
    <div class="filter-section">
        <div class="filter-title">
            <i class="fas fa-sliders-h"></i>
            Filter Report Data
        </div>

        <form method="post" class="filter-form">
            <div class="filter-grid">
                <div class="filter-group">
                    <label class="filter-label">
                        <i class="fas fa-calendar-day"></i>
                        Start Date
                    </label>
                    <input asp-for="StartDate" class="filter-input" type="date" />
                </div>

                <div class="filter-group">
                    <label class="filter-label">
                        <i class="fas fa-calendar-check"></i>
                        End Date
                    </label>
                    <input asp-for="EndDate" class="filter-input" type="date" />
                </div>
            </div>

            <div class="filter-actions">
                <button type="button" onclick="resetFilters()" class="btn btn-secondary">
                    <i class="fas fa-redo"></i>
                    Reset Filters
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-filter"></i>
                    Apply Filters
                </button>
                <a href="@Url.Action("ExportSalesToExcel", new { StartDate = Model.StartDate, EndDate = Model.EndDate })"
                   class="btn btn-success">
                    <i class="fas fa-file-excel"></i>
                    Export to Excel
                </a>
            </div>
        </form>
    </div>

    <!-- SUMMARY CARDS -->
    <div class="summary-section">
        <div class="summary-grid">
            <div class="summary-card">
                <div class="summary-content">
                    <div class="summary-info">
                        <div class="summary-label">
                            <i class="fas fa-money-bill-wave"></i>
                            Total Sales
                        </div>
                        <div class="summary-value">
                            @Model.TotalSales.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                    </div>
                    <div class="summary-icon">
                        <i class="fas fa-cash-register"></i>
                    </div>
                </div>
            </div>

            <div class="summary-card">
                <div class="summary-content">
                    <div class="summary-info">
                        <div class="summary-label">
                            <i class="fas fa-receipt"></i>
                            Total Tax
                        </div>
                        <div class="summary-value">
                            @Model.TotalTax.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                    </div>
                    <div class="summary-icon">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                </div>
            </div>

            <div class="summary-card">
                <div class="summary-content">
                    <div class="summary-info">
                        <div class="summary-label">
                            <i class="fas fa-tags"></i>
                            Total Discount
                        </div>
                        <div class="summary-value">
                            @Model.TotalDiscount.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                    </div>
                    <div class="summary-icon">
                        <i class="fas fa-percentage"></i>
                    </div>
                </div>
            </div>

            <div class="summary-card">
                <div class="summary-content">
                    <div class="summary-info">
                        <div class="summary-label">
                            <i class="fas fa-shopping-cart"></i>
                            Total Transactions
                        </div>
                        <div class="summary-value">
                            @Model.TotalTransactions
                        </div>
                    </div>
                    <div class="summary-icon">
                        <i class="fas fa-receipt"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TABLE SECTION -->
    <div class="table-section">
        <div class="table-container">
            <div class="table-header">
                <div class="table-title">
                    <i class="fas fa-table"></i>
                    Sales Transactions
                </div>
                <div class="table-stats">
                    <span><i class="fas fa-file-alt"></i> @(Model.Sales?.Count() ?? 0) Records</span>
                    <span><i class="fas fa-chart-bar"></i> @Model.TotalTransactions Transactions</span>
                </div>
            </div>

            <div class="table-wrapper">
                @if (Model.Sales != null && Model.Sales.Any())
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th><i class="fas fa-calendar"></i> Date & Time</th>
                                <th><i class="fas fa-hashtag"></i> Invoice #</th>
                                <th><i class="fas fa-user-tie"></i> Cashier</th>
                                <th class="text-end"><i class="fas fa-box"></i> Items</th>
                                <th class="text-end"><i class="fas fa-layer-group"></i> Subtotal</th>
                                <th class="text-end"><i class="fas fa-receipt"></i> Tax</th>
                                <th class="text-end"><i class="fas fa-tag"></i> Discount</th>
                                <th class="text-end"><i class="fas fa-wallet"></i> Total</th>
                                <th class="text-center"><i class="fas fa-eye"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sale in Model.Sales)
                            {
                                <tr>
                                    <td>
                                        <i class="far fa-clock text-muted me-2"></i>
                                        @sale.SaleDate.ToString("dd MMM yyyy • HH:mm")
                                    </td>
                                    <td>
                                        <span class="invoice-badge">
                                            <i class="fas fa-file-invoice"></i>
                                            @sale.InvoiceNumber
                                        </span>
                                    </td>
                                    <td>
                                        <span class="cashier-badge">
                                            <i class="fas fa-user-circle"></i>
                                            @sale.CashierId
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <span class="badge bg-light text-dark">
                                            @sale.SaleItems.Count
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <strong>@sale.SubTotal.ToString("C", new CultureInfo("ur-PK"))</strong>
                                    </td>
                                    <td class="text-end">
                                        <span class="text-danger">@sale.Tax.ToString("C", new CultureInfo("ur-PK"))</span>
                                    </td>
                                    <td class="text-end">
                                        <span class="text-warning">@sale.Discount.ToString("C", new CultureInfo("ur-PK"))</span>
                                    </td>
                                    <td class="text-end">
                                        <strong class="text-success">@sale.Total.ToString("C", new CultureInfo("ur-PK"))</strong>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Details", "Sales", new { id = sale.Id })"
                                           class="view-btn">
                                            <i class="fas fa-external-link-alt"></i>
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3 class="empty-title">No Sales Data Available</h3>
                        <p class="empty-subtitle">
                            Try adjusting your date filters or check back later for new sales data.
                        </p>
                    </div>
                }
            </div>

            @if (Model.Sales != null && Model.Sales.Any())
            {
                <div class="table-footer">
                    <div class="footer-label">
                        <i class="fas fa-calculator"></i>
                        Report Totals
                    </div>
                    <div class="footer-values">
                        <div class="footer-value">
                            @grandSub.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                        <div class="footer-value">
                            @grandTax.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                        <div class="footer-value">
                            @grandDisc.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                        <div class="footer-value">
                            @grandTotal.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set default dates if not set
        document.addEventListener('DOMContentLoaded', function() {
            const startDate = document.getElementById('StartDate');
            const endDate = document.getElementById('EndDate');

            if (!startDate.value) {
                const today = new Date();
                const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
                startDate.valueAsDate = firstDay;
            }

            if (!endDate.value) {
                endDate.valueAsDate = new Date();
            }

            // Add hover effects to table rows
            const tableRows = document.querySelectorAll('.data-table tbody tr');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(4px)';
                    this.style.boxShadow = '0 4px 12px rgba(0,0,0,0.08)';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                    this.style.boxShadow = 'none';
                });
            });

            // Form submission loading state
            const filterForm = document.querySelector('.filter-form');
            const submitBtn = filterForm.querySelector('button[type="submit"]');

            filterForm.addEventListener('submit', function() {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating Report...';
                submitBtn.disabled = true;
            });
        });

        // Reset filters function
        function resetFilters() {
            if (confirm('Are you sure you want to reset all filters?')) {
                const filterForm = document.querySelector('.filter-form');
                filterForm.reset();

                // Set default dates
                const today = new Date();
                const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);

                document.getElementById('StartDate').valueAsDate = firstDay;
                document.getElementById('EndDate').valueAsDate = today;

                // Submit the form after reset
                filterForm.submit();
            }
        }

        // Add smooth scrolling for better UX
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
}
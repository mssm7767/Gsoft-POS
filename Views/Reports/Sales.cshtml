@using System.Globalization
@model GSoftPosNew.Models.SalesReport

@{
    ViewData["Title"] = "Sales Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .report-wrapper {
        background: radial-gradient(circle at top left, #e0f2fe 0, #eff6ff 35%, #f9fafb 100%);
        min-height: 100vh;
        padding: 1rem 0 1.5rem;
    }

    .report-container .card {
        border: none;
        border-radius: 1.25rem;
        box-shadow: 0 18px 45px rgba(15, 23, 42, 0.18);
        overflow: hidden;
    }

    .report-container .card-header {
        border-bottom: none;
        padding: 1rem 1.5rem;
        background: linear-gradient(135deg, #0d6efd, #2563eb);
    }

    .report-title {
        font-weight: 600;
        letter-spacing: .03em;
        display: flex;
        align-items: center;
        gap: .75rem;
    }

    .report-title-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.12);
    }

    .report-subtitle {
        font-size: .8rem;
        color: rgba(248, 250, 252, 0.85);
    }

    .filter-panel {
        padding: 1rem 1.5rem;
        border-radius: 1rem;
        background: linear-gradient(135deg, #eff6ff, #e0f2fe);
        border: 1px solid rgba(148, 163, 184, 0.25);
    }

        .filter-panel label {
            font-size: .8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: .06em;
            color: #6b7280;
        }

        .filter-panel .form-control {
            border-radius: .75rem;
            border-color: rgba(148, 163, 184, 0.6);
        }

        .filter-panel .btn {
            border-radius: .75rem;
            font-weight: 600;
            padding-inline: 1.3rem;
        }

        .filter-panel .btn-primary {
            box-shadow: 0 10px 25px rgba(37, 99, 235, 0.35);
        }

        .filter-panel .btn-success {
            box-shadow: 0 10px 25px rgba(22, 163, 74, 0.35);
        }

    .summary-card {
        border-radius: 1.1rem;
        border: none;
        background: linear-gradient(135deg, #eff6ff, #dbeafe);
        box-shadow: 0 16px 35px rgba(15, 23, 42, 0.13);
        position: relative;
        overflow: hidden;
    }

        .summary-card::after {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top right, rgba(59, 130, 246, 0.25), transparent 55%);
            opacity: .9;
            pointer-events: none;
        }

        .summary-card .card-body {
            position: relative;
            z-index: 1;
        }

    .summary-icon {
        width: 44px;
        height: 44px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: rgba(37, 99, 235, 0.12);
        margin-bottom: .4rem;
        font-size: 1.3rem;
    }

        .summary-icon.total-sales {
            color: #1d4ed8;
        }

        .summary-icon.total-tax {
            color: #b91c1c;
            background: rgba(248, 113, 113, 0.18);
        }

        .summary-icon.total-discount {
            color: #d97706;
            background: rgba(251, 191, 36, 0.18);
        }

        .summary-icon.transactions {
            color: #059669;
            background: rgba(34, 197, 94, 0.16);
        }

    .summary-card h6 {
        font-size: .8rem;
        letter-spacing: .08em;
        text-transform: uppercase;
        color: #6b7280;
        margin-bottom: .15rem;
    }

    .summary-card h3 {
        font-weight: 700;
        margin: 0;
    }

    .table-card {
        border-radius: 1.1rem;
        border: 1px solid rgba(148, 163, 184, 0.3);
        background: #ffffff;
        box-shadow: 0 12px 30px rgba(15, 23, 42, 0.06);
    }

    .table thead {
        background: #f3f4f6;
        text-transform: uppercase;
        font-size: .8rem;
        letter-spacing: .05em;
    }

        .table thead th {
            border-bottom-width: 0;
        }

    .table tbody tr:hover {
        background: #eff6ff;
    }

    .badge-invoice {
        background: rgba(37, 99, 235, 0.09);
        color: #1d4ed8;
        font-weight: 600;
        font-size: .75rem;
        border-radius: 999px;
        padding: .15rem .6rem;
    }

    .cashier-pill {
        font-size: .8rem;
        border-radius: 999px;
        padding: .2rem .6rem;
        background: rgba(15, 23, 42, 0.04);
    }

    .btn-outline-primary.btn-sm i {
        font-size: .8rem;
    }

    @@media (max-width: 768px) {
        .report-container .card-header h4 {
            font-size: 1.1rem;
        }
    }
</style>

<div class="report-wrapper">
    <!-- full-screen feel -->
    <div class="container-fluid report-container px-3 px-md-4">
        <div class="card shadow-sm w-100">
            <div class="card-header text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="report-title mb-0">
                            <span class="report-title-icon">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span>Sales Report</span>
                        </h4>
                        <div class="report-subtitle mt-1">
                            <i class="far fa-calendar-alt me-1"></i>
                            @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()
                        </div>
                    </div>
                    <span class="small text-light text-opacity-80 d-none d-md-inline">
                        <i class="fas fa-store me-1"></i> G-Soft POS Analytics
                    </span>
                </div>
            </div>

            <div class="card-body">
                <!-- Filter panel -->
                <form method="post" class="mb-4">
                    <div class="filter-panel">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label asp-for="StartDate" class="form-label">
                                    <i class="far fa-calendar me-1"></i> Start Date
                                </label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="EndDate" class="form-label">
                                    <i class="far fa-calendar-check me-1"></i> End Date
                                </label>
                                <input asp-for="EndDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-4 d-flex gap-2 mt-3 mt-md-0">
                                <button type="submit" class="btn btn-primary ms-auto">
                                    <i class="fas fa-filter me-2"></i>Filter
                                </button>
                                <a href="@Url.Action("ExportSalesToExcel", new { StartDate = Model.StartDate, EndDate = Model.EndDate })"
                                   class="btn btn-success">
                                    <i class="fas fa-file-excel me-2"></i>Excel
                                </a>
                            </div>
                        </div>
                    </div>
                </form>

                <!-- Summary cards -->
                <div class="report-summary mb-4">
                    <div class="row g-3">
                        <div class="col-md-3 col-6">
                            <div class="card summary-card h-100">
                                <div class="card-body text-center">
                                    <div class="summary-icon total-sales">
                                        <i class="fas fa-dollar-sign"></i>
                                    </div>
                                    <h6>Total Sales</h6>
                                    <h3 class="text-primary">
                                        @Model.TotalSales.ToString("C", new CultureInfo("ur-PK"))
                                    </h3>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 col-6">
                            <div class="card summary-card h-100">
                                <div class="card-body text-center">
                                    <div class="summary-icon total-tax">
                                        <i class="fas fa-receipt"></i>
                                    </div>
                                    <h6>Total Tax</h6>
                                    <h3 class="text-danger">
                                        @Model.TotalTax.ToString("C", new CultureInfo("ur-PK"))
                                    </h3>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 col-6">
                            <div class="card summary-card h-100">
                                <div class="card-body text-center">
                                    <div class="summary-icon total-discount">
                                        <i class="fas fa-tags"></i>
                                    </div>
                                    <h6>Total Discount</h6>
                                    <h3 class="text-warning">
                                        @Model.TotalDiscount.ToString("C", new CultureInfo("ur-PK"))
                                    </h3>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 col-6">
                            <div class="card summary-card h-100">
                                <div class="card-body text-center">
                                    <div class="summary-icon transactions">
                                        <i class="fas fa-shopping-cart"></i>
                                    </div>
                                    <h6>Transactions</h6>
                                    <h3 class="text-success">@Model.TotalTransactions</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Table -->
                <div class="table-card">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="far fa-calendar-alt me-1"></i>Date</th>
                                    <th><i class="fas fa-hashtag me-1"></i>Invoice #</th>
                                    <th><i class="fas fa-user me-1"></i>Cashier</th>
                                    <th class="text-end"><i class="fas fa-boxes me-1"></i>Items</th>
                                    <th class="text-end"><i class="fas fa-layer-group me-1"></i>Subtotal</th>
                                    <th class="text-end"><i class="fas fa-receipt me-1"></i>Tax</th>
                                    <th class="text-end"><i class="fas fa-tag me-1"></i>Discount</th>
                                    <th class="text-end"><i class="fas fa-wallet me-1"></i>Total</th>
                                    <th class="text-center"><i class="fas fa-cogs"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Sales != null && Model.Sales.Any())
                                {
                                    decimal grandSub = 0;
                                    decimal grandTax = 0;
                                    decimal grandDisc = 0;
                                    decimal grandTotal = 0;

                                    foreach (var sale in Model.Sales)
                                    {
                                        grandSub += sale.SubTotal;
                                        grandTax += sale.Tax;
                                        grandDisc += sale.Discount;
                                        grandTotal += sale.Total;

                                        <tr>
                                            <td>
                                                <i class="far fa-clock me-1 text-muted"></i>
                                                @sale.SaleDate.ToString("MMM dd, yyyy hh:mm tt")
                                            </td>
                                            <td>
                                                <span class="badge badge-invoice">
                                                    <i class="fas fa-file-invoice me-1"></i>@sale.InvoiceNumber
                                                </span>
                                            </td>
                                            <td>
                                                <span class="cashier-pill">
                                                    <i class="fas fa-user-circle me-1 text-primary"></i>@sale.CashierId
                                                </span>
                                            </td>
                                            <td class="text-end">@sale.SaleItems.Count</td>
                                            <td class="text-end">
                                                @sale.SubTotal.ToString("C", new CultureInfo("ur-PK"))
                                            </td>
                                            <td class="text-end">
                                                @sale.Tax.ToString("C", new CultureInfo("ur-PK"))
                                            </td>
                                            <td class="text-end">
                                                @sale.Discount.ToString("C", new CultureInfo("ur-PK"))
                                            </td>
                                            <td class="text-end">
                                                @sale.Total.ToString("C", new CultureInfo("ur-PK"))
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("Details", "Sales", new { id = sale.Id })"
                                                   class="btn btn-sm btn-outline-primary rounded-pill">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                    <!-- Totals row -->
                                    <tr class="fw-bold table-light">
                                        <td colspan="4" class="text-end">Totals:</td>
                                        <td class="text-end">
                                            @grandSub.ToString("C", new CultureInfo("ur-PK"))
                                        </td>
                                        <td class="text-end">
                                            @grandTax.ToString("C", new CultureInfo("ur-PK"))
                                        </td>
                                        <td class="text-end">
                                            @grandDisc.ToString("C", new CultureInfo("ur-PK"))
                                        </td>
                                        <td class="text-end">
                                            @grandTotal.ToString("C", new CultureInfo("ur-PK"))
                                        </td>
                                        <td></td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted py-4">
                                            <i class="fas fa-info-circle me-1"></i>
                                            No sales found for this period.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


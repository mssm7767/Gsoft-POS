@model GSoftPosNew.Models.Supplier
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Add Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var supplierList = ViewBag.SupplierList as List<Supplier>;
    var typeShortcuts = new[] { "WholeSale", "Distributor", "Retailer", "Importer", "Manufacturer" };
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-11">
            <div class="card shadow-lg border-0 rounded-4 mb-5">
               
                <div class="card-body bg-light rounded-bottom-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success shadow-sm" id="alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Danger"] != null)
                    {
                        <div class="alert alert-danger shadow-sm" id="alert-danger">@TempData["Danger"]</div>
                    }

                    @using (Html.BeginForm("Create", "Supplier", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="form-label"><i class="fa fa-user-tie text-primary me-1"></i>Supplier Name *</label>
                                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.SupplierName, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fa fa-building text-secondary me-1"></i>Company</label>
                                @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Company, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fa fa-user text-info me-1"></i>Contact Person</label>
                                @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fa fa-envelope text-secondary me-1"></i>Email</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fa fa-globe text-success me-1"></i>Website</label>
                                @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label class="form-label"><i class="fa fa-id-card text-danger me-1"></i>Tax Number</label>
                                @Html.TextBoxFor(m => m.TaxNumber, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label class="form-label"><i class="fa fa-mobile text-primary me-1"></i>Mobile Number *</label>
                                @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label class="form-label"><i class="fa fa-phone text-info me-1"></i>Phone Number</label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label d-flex align-items-center">
                                    <i class="fa fa-certificate text-warning me-1"></i>Supplier Type
                                    <span class="ms-2 d-flex gap-2">
                                        @foreach (var t in typeShortcuts)
                                        {
                                            <span class="badge bg-warning text-dark" style="cursor:pointer;" onclick="document.getElementById('SupplierType').value='@t'">@t</span>
                                        }
                                    </span>
                                </label>
                                @Html.TextBox("SupplierType", null, new { @class = "form-control", id = "SupplierType", placeholder = "Type or pick a type" })
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fa fa-image me-1"></i>Upload Logo</label>
                                <input type="file" name="LogoFile" class="form-control" accept=".jpg,.jpeg,.png" onchange="previewLogo(event)" />
                                <div class="text-center mt-3">
                                    <img id="logoPreview" src="~/images/no-image.png" class="img-thumbnail rounded shadow-sm" style="width:90px;height:90px;object-fit:cover;" />
                                </div>
                            </div>
                        </div>
                        <hr class="my-4" />
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="border p-3 rounded-3 bg-white shadow-sm mb-3">
                                    <h6 class="fw-bold mb-2"><i class="fa fa-map-marker-alt me-1 text-danger"></i>Billing Address</h6>
                                    <label class="form-label">Address *</label>
                                    @Html.TextAreaFor(m => m.BillingAddress, new { @class = "form-control", rows = 2 })
                                    @Html.ValidationMessageFor(m => m.BillingAddress, "", new { @class = "text-danger" })
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <label class="form-label">Country *</label>
                                            @Html.DropDownListFor(m => m.BillingCountry, (IEnumerable<SelectListItem>)ViewBag.CountryList, new { @class = "form-select" })
                                            @Html.ValidationMessageFor(m => m.BillingCountry, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">City *</label>
                                            @Html.TextBoxFor(m => m.BillingCity, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.BillingCity, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="border p-3 rounded-3 bg-white shadow-sm mb-3">
                                    <h6 class="fw-bold mb-2"><i class="fa fa-map-marked-alt me-1 text-success"></i>Shipping Address</h6>
                                    <label class="form-label">Address *</label>
                                    @Html.TextAreaFor(m => m.ShippingAddress, new { @class = "form-control", rows = 2 })
                                    @Html.ValidationMessageFor(m => m.ShippingAddress, "", new { @class = "text-danger" })
                                    <div class="row mt-2">
                                        <div class="col-6">
                                            <label class="form-label">Country *</label>
                                            @Html.DropDownListFor(m => m.ShippingCountry, (IEnumerable<SelectListItem>)ViewBag.CountryList, new { @class = "form-select" })
                                            @Html.ValidationMessageFor(m => m.ShippingCountry, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">City *</label>
                                            @Html.TextBoxFor(m => m.ShippingCity, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ShippingCity, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill me-2 shadow">
                                <i class="fa fa-save me-1"></i> Save Supplier
                            </button>
                            <button type="button" class="btn btn-warning btn-lg rounded-pill me-2 shadow" disabled>
                                <i class="fa fa-edit me-1"></i> Edit
                            </button>
                            <button type="button" class="btn btn-info btn-lg rounded-pill shadow" onclick="window.print();">
                                <i class="fa fa-print me-1"></i> Print
                            </button>
                        </div>
                    }
                </div>
            </div>
            <!-- ALL SUPPLIERS TABLE BELOW -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header d-flex align-items-center text-white rounded-top-4"
                     style="background: linear-gradient(93deg, #005c97 60%, #363795 100%);">
                    <i class="fa fa-list fa-lg me-2"></i>
                    <span class="fw-bold">All Suppliers</span>
                </div>
                <div class="card-body bg-white rounded-bottom-4 p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Company</th>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Email</th>
                                    <th>Type</th>
                                    <th>City</th>
                                    <th>Mobile</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (supplierList != null && supplierList.Any())
                                {
                                    foreach (var s in supplierList)
                                    {
                                        <tr>
                                            <td>@s.Company</td>
                                            <td>@s.SupplierName</td>
                                            <td>@s.ContactPerson</td>
                                            <td>@s.Email</td>
                                            <td>@s.SupplierType</td>
                                            <td>@s.BillingCity</td>
                                            <td>@s.MobileNumber</td>
                                            <td class="text-end">
                                                <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-success rounded-pill me-1">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete"
                                                   asp-route-id="@s.Id"
                                                   class="btn btn-sm btn-outline-danger rounded-pill"
                                                   onclick="return confirm('Are you sure you want to delete this item?');">
                                                    <i class="fa fa-trash"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">No suppliers found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    setTimeout(() => {
        let alertBox = document.getElementById("alert-success");
        if (alertBox) {
            alertBox.style.display = "none";
        }
    }, 2000);
    setTimeout(() => {
        let alertBox = document.getElementById("alert-danger");
        if (alertBox) {
            alertBox.style.display = "none";
        }
    }, 2000);
    function previewLogo(event) {
        const reader = new FileReader();
        reader.onload = function(){
            const output = document.getElementById('logoPreview');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>

@model GSoftPosNew.Models.Supplier
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Add Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var supplierList = ViewBag.SupplierList as List<Supplier> ?? new List<Supplier>();
    var typeShortcuts = new[] { "WholeSale", "Distributor", "Retailer", "Importer", "Manufacturer" };
}

<link rel="stylesheet" href="~/css/supplier.css" asp-append-version="true" />

<!-- TOP HEADING / PATTI -->
<div class="breadcrumb-bar d-flex align-items-center mb-3 p-3 rounded shadow-sm"
     style="background: linear-gradient(93deg, #005c97 50%, #363795 100%);">
    <a asp-controller="Dashboard" asp-action="Index"
       class="breadcrumb-link text-white fw-semibold me-2"
       style="text-decoration:none;">
        <i class="fa fa-arrow-left me-2"></i> Dashboard
    </a>
    <i class="fa fa-chevron-right mx-2 separator-icon text-white-50"></i>
    <h4 class="breadcrumb-title m-0 text-white">Add Supplier</h4>
</div>

<!-- CENTER TOASTS (Success / Danger) -->
@if (TempData["Success"] != null)
{
    <div id="successToast" class="sms-message sms-success show">
        <i class="fa fa-check-circle me-2"></i>
        @TempData["Success"]
    </div>
}
@if (TempData["Danger"] != null)
{
    <div id="dangerToast" class="sms-message sms-danger show">
        <i class="fa fa-exclamation-circle me-2"></i>
        @TempData["Danger"]
    </div>
}

<div class="container-fluid py-3">
    <div class="row justify-content-center g-3">

        <!-- LEFT: ADD SUPPLIER (half screen) -->
        <div class="col-12 col-lg-6 col-xl-6">
            <div class="form-card">
                <div class="form-card-header">
                    <i class="fa fa-truck me-2"></i>
                    <span>Add Supplier</span>
                </div>

                <div class="pt-3">
                    @using (Html.BeginForm("Create", "Supplier", FormMethod.Post, new { enctype = "multipart/form-data", id = "supplierForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-user-tie text-primary me-1"></i>Supplier Name *
                                </label>
                                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", id = "SupplierName" })
                                @Html.ValidationMessageFor(m => m.SupplierName, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-building text-secondary me-1"></i>Company
                                </label>
                                @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Company, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-user text-info me-1"></i>Contact Person
                                </label>
                                @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-envelope text-secondary me-1"></i>Email
                                </label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-globe text-success me-1"></i>Website
                                </label>
                                @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">
                                    <i class="fa fa-id-card text-danger me-1"></i>Tax Number
                                </label>
                                @Html.TextBoxFor(m => m.TaxNumber, new { @class = "form-control" })
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">
                                    <i class="fa fa-mobile text-primary me-1"></i>Mobile Number *
                                </label>
                                @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control" })
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">
                                    <i class="fa fa-phone text-info me-1"></i>Phone Number
                                </label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label d-flex align-items-center">
                                    <i class="fa fa-certificate text-warning me-1"></i>Supplier Type
                                    <span class="ms-2 d-flex gap-2 flex-wrap">
                                        @foreach (var t in typeShortcuts)
                                        {
                                            <span class="badge bg-warning text-dark mb-1"
                                                  style="cursor:pointer;"
                                                  onclick="document.getElementById('SupplierType').value='@t'">
                                                @t
                                            </span>
                                        }
                                    </span>
                                </label>
                                @Html.TextBox("SupplierType", null,
                                new
                                {
                                    @class = "form-control",
                                    id = "SupplierType",
                                    placeholder = "Type or pick a type"
                                })
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fa fa-image me-1"></i>Upload Logo
                            </label>
                            <input type="file" name="LogoFile" class="form-control"
                                   accept=".jpg,.jpeg,.png" onchange="previewLogo(event)" />
                            <div class="text-center mt-3">
                                <img id="logoPreview" src="~/images/no-image.png"
                                     class="img-thumbnail rounded shadow-sm supplier-logo-thumb" />
                            </div>
                        </div>
                    </div>

                    <hr class="my-3" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="border p-3 rounded-3 bg-white shadow-sm mb-2">
                                <h6 class="fw-bold mb-2">
                                    <i class="fa fa-map-marker-alt me-1 text-danger"></i>Billing Address
                                </h6>
                                <label class="form-label">Address *</label>
                                @Html.TextAreaFor(m => m.BillingAddress, new { @class = "form-control", rows = 2 })
                                @Html.ValidationMessageFor(m => m.BillingAddress, "", new { @class = "text-danger" })

                                <div class="row mt-2">
                                    <div class="col-6">
                                        <label class="form-label">Country *</label>
                                        @Html.DropDownListFor(m => m.BillingCountry,
                                                                                (IEnumerable<SelectListItem>)ViewBag.CountryList,
                                                                                new { @class = "form-select" })
                                        @Html.ValidationMessageFor(m => m.BillingCountry, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">City *</label>
                                        @Html.TextBoxFor(m => m.BillingCity, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.BillingCity, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border p-3 rounded-3 bg-white shadow-sm mb-2">
                                <h6 class="fw-bold mb-2">
                                    <i class="fa fa-map-marked-alt me-1 text-success"></i>Shipping Address
                                </h6>
                                <label class="form-label">Address *</label>
                                @Html.TextAreaFor(m => m.ShippingAddress, new { @class = "form-control", rows = 2 })
                                @Html.ValidationMessageFor(m => m.ShippingAddress, "", new { @class = "text-danger" })

                                <div class="row mt-2">
                                    <div class="col-6">
                                        <label class="form-label">Country *</label>
                                        @Html.DropDownListFor(m => m.ShippingCountry,
                                                                                (IEnumerable<SelectListItem>)ViewBag.CountryList,
                                                                                new { @class = "form-select" })
                                        @Html.ValidationMessageFor(m => m.ShippingCountry, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">City *</label>
                                        @Html.TextBoxFor(m => m.ShippingCity, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.ShippingCity, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- BUTTONS: Save / Edit (disabled) / Clear -->
                    <div class="mt-3 text-end">
                        <button type="submit" class="btn btn-success btn-lg rounded-pill me-2 shadow">
                            <i class="fa fa-save me-1"></i> Save Supplier
                        </button>
                        <button type="button" class="btn btn-warning btn-lg rounded-pill me-2 shadow" disabled>
                            <i class="fa fa-edit me-1"></i> Edit
                        </button>
                        <a asp-action="Create" class="btn btn-secondary btn-lg rounded-pill shadow">
                            <i class="fa fa-broom me-1"></i> Clear
                        </a>
                    </div>
                                        }
                </div>
            </div>
        </div>

        <!-- RIGHT: SUPPLIER LIST (half screen) -->
        <div class="col-12 col-lg-6 col-xl-6">
            <div class="list-card" id="supplierListCard">
                <!-- Header + Search + Print -->
                <div class="form-card-header d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2">
                        <i class="fa fa-list fa-lg"></i>
                        <span class="fw-bold">All Suppliers</span>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <div class="input-group input-group-sm" style="min-width:260px;">
                            <span class="input-group-text bg-white">
                                <i class="fa fa-search"></i>
                            </span>
                            <input id="supplierSearch"
                                   type="text"
                                   class="form-control"
                                   list="supplierSuggestions"
                                   placeholder="Search by ID, name, company" />
                            <button id="clearSupplierSearch" class="btn btn-outline-light border-0" type="button" title="Clear">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>

                        <button id="btnPrintSuppliers" class="btn btn-outline-light btn-sm" type="button" title="Print list (A4)">
                            <i class="fa fa-print"></i>
                        </button>
                    </div>
                </div>

                <!-- Suggestions (ID+Name+Company) -->
                <datalist id="supplierSuggestions">
                    @foreach (var s in supplierList)
                    {
                        var label = $"ID {s.Id} - {s.SupplierName} ({s.Company})";
                        <option value="@label"></option>
                    }
                </datalist>

                <div class="stretch-list">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0 align-middle" id="supplierTable">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:70px;">ID</th>
                                    <th>Company</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>City</th>
                                    <th>Mobile</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (supplierList.Any())
                                {
                                    foreach (var s in supplierList)
                                    {
                                        <tr data-supp-id="@s.Id"
                                            data-supp-name="@s.SupplierName"
                                            data-supp-company="@s.Company">
                                            <td>@s.Id</td>
                                            <td>@s.Company</td>
                                            <td>@s.SupplierName</td>
                                            <td>@s.SupplierType</td>
                                            <td>@s.BillingCity</td>
                                            <td>@s.MobileNumber</td>
                                            <td class="text-end">
                                                <a asp-action="Edit" asp-route-id="@s.Id"
                                                   class="btn btn-sm btn-outline-success rounded-pill me-1">
                                                    <i class="fa fa-edit"></i>
                                                </a>

                                                <a href="@Url.Action("Delete", "Supplier", new { id = s.Id })"
                                                   class="btn btn-sm btn-outline-danger rounded-pill"
                                                   data-supp-name="@s.SupplierName"
                                                   onclick="confirmDeleteSupplier(event, this)">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No suppliers found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Logo preview
        function previewLogo(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const output = document.getElementById('logoPreview');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        // SweetAlert delete for supplier
        function confirmDeleteSupplier(event, element) {
            event.preventDefault();
            const name = element.getAttribute('data-supp-name') || 'this supplier';

            Swal.fire({
                title: 'Delete?',
                text: 'Do you want to delete ' + name + ' ?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete',
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = element.href;
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {

            // CENTER SUCCESS TOAST HIDE (1.5s)
            var sToast = document.getElementById('successToast');
            if (sToast) {
                setTimeout(function () {
                    sToast.classList.add('hide');
                    setTimeout(function () {
                        sToast.style.display = 'none';
                    }, 500);
                }, 1500);
            }

            // CENTER DANGER TOAST HIDE (2s)
            var dToast = document.getElementById('dangerToast');
            if (dToast) {
                setTimeout(function () {
                    dToast.classList.add('hide');
                    setTimeout(function () {
                        dToast.style.display = 'none';
                    }, 500);
                }, 2000);
            }

            // ENTER => NEXT FIELD (TAB) IN FORM
            var form = document.getElementById("supplierForm");
            if (form) {
                var focusable = Array.from(
                    form.querySelectorAll("input, select, textarea")
                ).filter(function (el) {
                    return el.type !== "hidden" &&
                        !el.disabled &&
                        el.offsetParent !== null;
                });

                focusable.forEach(function (el, index) {
                    el.addEventListener("keydown", function (e) {
                        if (e.key === "Enter") {
                            e.preventDefault();
                            var next = focusable[index + 1];
                            if (next) {
                                next.focus();
                                if (next.select) next.select();
                            } else {
                                form.submit();
                            }
                        }
                    });
                });
            }

            // FIRST FOCUS: SupplierName
            var nameInput = document.getElementById("SupplierName");
            if (nameInput) {
                setTimeout(function () {
                    nameInput.focus();
                    nameInput.select();
                }, 200);
            }

            // LIVE SEARCH (ID + Name + Company)
            const searchBox = document.getElementById('supplierSearch');
            const clearBtn = document.getElementById('clearSupplierSearch');
            const table = document.getElementById('supplierTable');

            function filterSuppliers() {
                if (!table) return;
                const q = (searchBox.value || '').toLowerCase().trim();
                const rows = table.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const id = (row.dataset.suppId || '').toString().toLowerCase();
                    const name = (row.dataset.suppName || '').toLowerCase();
                    const comp = (row.dataset.suppCompany || '').toLowerCase();

                    const haystack = (id + ' ' + name + ' ' + comp);
                    row.style.display = haystack.indexOf(q) >= 0 ? '' : 'none';
                });
            }

            if (searchBox) {
                searchBox.addEventListener('input', filterSuppliers);
            }
            if (clearBtn) {
                clearBtn.addEventListener('click', function () {
                    searchBox.value = '';
                    filterSuppliers();
                    searchBox.focus();
                });
            }

            // PRINT SUPPLIER LIST (A4)
            const btnPrint = document.getElementById('btnPrintSuppliers');
            if (btnPrint) {
                btnPrint.addEventListener('click', function () {
                    window.print();
                });
            }
        });
    </script>

    <style>
        /* Print only supplier list card on A4-ish page */
        @@media print {
            body * {
                visibility: hidden;
            }

            #supplierListCard, #supplierListCard * {
                visibility: visible;
            }

            #supplierListCard {
                position: absolute;
                inset: 0;
                margin: 0;
                padding: 0.5cm;
            }
        }</style>
}

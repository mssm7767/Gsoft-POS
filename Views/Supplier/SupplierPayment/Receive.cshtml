@model GSoftPosNew.ViewModels.SupplierReceivePaymentViewModel

@{
    ViewBag.Title = "Supplier Payment Receiving";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient-success text-white d-flex align-items-center rounded-top-4"
                     style="background: linear-gradient(90deg, #28a745 0%, #53e1b6 100%);">
                    <i class="fa fa-hand-holding-usd fa-lg me-2"></i>
                    <h4 class="mb-0 flex-grow-1">Supplier Payment Receiving</h4>
                    <span class="badge bg-white text-success fw-bold ms-2"><i class="fa fa-calendar-alt me-1"></i> @DateTime.Now.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="card-body bg-light rounded-bottom-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
                    }
                    <form asp-action="Receive" method="post" autocomplete="off" class="row g-4">
                        @Html.AntiForgeryToken()
                        <div class="col-12 col-md-6">
                            <label class="form-label"><i class="fa fa-user-tie text-success me-1"></i>Supplier</label>
                            <select asp-for="SupplierId" class="form-select shadow-sm" asp-items="@(new SelectList(Model.SupplierList, "Id", "SupplierName"))" required>
                                <option value="">Select Supplier</option>
                            </select>
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label"><i class="fa fa-calendar text-secondary me-1"></i>Date & Time</label>
                            <input asp-for="PaymentDate" class="form-control shadow-sm" type="datetime-local" value="@(Model.PaymentDate.HasValue? Model.PaymentDate.Value.ToString("yyyy-MM-ddTHH:mm") : "")" required />
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label"><i class="fa fa-balance-scale text-info me-1"></i>Old Ledger Balance</label>
                            <input class="form-control shadow-sm text-danger fw-bold" type="text" value="@Model.OldBalance.ToString("N2")" readonly />
                        </div>

                        <div class="col-6 col-md-3">
                            <label class="form-label"><i class="fa fa-money-check-alt text-success me-1"></i>Amount</label>
                            <input asp-for="Amount" class="form-control shadow-sm" required />
                        </div>
                        <div class="col-6 col-md-3">
                            <label class="form-label"><i class="fa fa-coins text-warning me-1"></i>Advance</label>
                            <input asp-for="Advance" class="form-control shadow-sm" placeholder="0" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label"><i class="fa fa-credit-card text-success me-1"></i>Payment Method</label>
                            <select asp-for="PaymentMethod" class="form-select shadow-sm" required>
                                <option value="Cash">Cash</option>
                                <option value="Online">Online</option>
                                <option value="Cheque">Cheque</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label"><i class="fa fa-align-left text-muted me-1"></i>Narration / Note</label>
                            <input asp-for="Narration" class="form-control shadow-sm" maxlength="200" />
                        </div>
                        <div class="col-12 text-end mt-2">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill me-2 shadow" title="Save Payment">
                                <i class="fa fa-save me-1"></i> Save
                            </button>
                            <button type="button" class="btn btn-warning btn-lg rounded-pill me-2 shadow" title="Edit Payment" disabled>
                                <i class="fa fa-edit me-1"></i> Edit
                            </button>
                            <button type="button" class="btn btn-info btn-lg rounded-pill shadow" title="Print Payment" onclick="window.print();">
                                <i class="fa fa-print me-1"></i> Print
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Payment History Table -->
            <div class="card mt-5 shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white d-flex align-items-center rounded-top-4">
                    <i class="fa fa-list fa-lg me-2"></i>
                    <span class="fw-bold">Latest Supplier Payments</span>
                </div>
                <div class="card-body bg-white rounded-bottom-4 p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Supplier</th>
                                    <th>Amount</th>
                                    <th>Advance</th>
                                    <th>Method</th>
                                    <th>Narration</th>
                                    <th>By</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PaymentHistory?.Count > 0)
                                {
                                    @foreach (var p in Model.PaymentHistory)
                                    {
                                        <tr>
                                            <td>@(p.PaymentDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                            <td>@(p.Supplier?.SupplierName ?? "-")</td>
                                            <td class="text-success fw-bold">@((p.Amount ?? 0m).ToString("N2"))</td>
                                            <td class="text-warning">@((p.Advance ?? 0m).ToString("N2"))</td>
                                            <td>@(p.PaymentMethod ?? "-")</td>
                                            <td>@(p.Narration ?? "-")</td>
                                            <td><i class="fa fa-user"></i> @(p.ReceivedBy ?? "Admin")</td>
                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No payments found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model GSoftPosNew.Models.User
@using System.Collections.Generic
@using GSoftPosNew.Models

@{
    ViewData["Title"] = "Add / Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userList = ViewBag.UserList as List<GSoftPosNew.Models.User>;
    var roles = ViewBag.Roles as List<Role> ?? new List<Role>();

    // ✅ Edit mode check
    var isEditMode = Model != null && Model.Id > 0;
}

<link href="~/css/user.css" rel="stylesheet" />

@if (TempData["Success"] != null)
{
    <div id="customNotification" class="alert sms-message show">
        @TempData["Success"]
    </div>
}

<div class="container-fluid py-4">
    <div class="row justify-content-center g-3">

        <!-- LEFT: ADD / EDIT USER -->
        <div class="col-12 col-lg-5 col-xl-5">
            <div class="form-card">
                <div class="form-card-header">
                    <i class="fa fa-user-plus fa-lg"></i>
                    <span>@(isEditMode ? "Edit User" : "Add New User")</span>
                </div>

                <div class="pt-3">
                    @using (Html.BeginForm(isEditMode ? "Edit" : "Create",
                                           "User",
                                           FormMethod.Post,
                                           new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)   <!-- edit ke liye hidden Id -->

                        <div class="row g-3">
                            <!-- Full Name -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-user text-primary"></i>Full Name
                                </label>
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", autocomplete = "off", id = "FullName" })
                                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                            </div>

                            <!-- Username -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-user-circle text-success"></i>Username
                                </label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", autocomplete = "off", id = "Username" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>

                            <!-- Password -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-lock text-warning"></i>Password
                                </label>
                                @Html.PasswordFor(m => m.Password, new
                                {
                                    @class = "form-control",
                                    autocomplete = "off",
                                    id = "Password",
                                    placeholder = isEditMode ? "Leave blank to keep old password" : ""
                                })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <!-- Contact Number -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-phone text-info"></i>Contact Number
                                </label>
                                @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control", autocomplete = "off", id = "ContactNumber" })
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-envelope text-secondary"></i>Email
                                </label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", autocomplete = "off", id = "Email" })
                            </div>

                            <!-- Role -->
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fa fa-user-shield text-primary"></i>Role
                                </label>
                                <div class="mb-1 d-flex flex-wrap gap-1">
                                    @foreach (var role in roles)
                                    {
                                        <span class="badge bg-warning text-dark"
                                              style="cursor:pointer;"
                                              onclick="document.getElementById('RoleText').value='@role.RoleName'">
                                            @role.RoleName
                                        </span>
                                    }
                                </div>
                                @Html.TextBoxFor(m => m.Role, new { @class = "form-control", id = "RoleText", autocomplete = "off", placeholder = "Type or pick a role" })
                            </div>

                            <!-- Address -->
                            <div class="col-12">
                                <label class="form-label">
                                    <i class="fa fa-map-marker-alt text-danger"></i>Address
                                </label>
                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", rows = 2, autocomplete = "off", id = "Address" })
                            </div>

                            <!-- Profile Picture -->
                            <div class="col-12">
                                <label class="form-label">
                                    <i class="fa fa-image"></i>Profile Picture
                                </label>
                                <input type="file" name="ProfilePic" class="form-control" accept=".jpg,.jpeg,.png" onchange="previewImage(event)" />
                                <div class="img-preview-container">
                                    <img id="imgPreview"
                                         src="@(string.IsNullOrEmpty(Model?.ProfilePicUrl) ? Url.Content("~/images/no-image.png") : Model.ProfilePicUrl)"
                                         class="user-thumb" />
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="mt-4 text-end">
                            <button type="submit" id="btnSaveUser" class="btn btn-success btn-lg rounded-pill me-2 shadow">
                                <i class="fa fa-save me-1"></i> @(isEditMode ? "Update User" : "Save User")
                            </button>
                            <button type="reset" id="btnClearUser" class="btn btn-secondary btn-lg rounded-pill shadow">
                                <i class="fa fa-eraser me-1"></i> Clear
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- RIGHT: USERS LIST -->
        <div class="col-12 col-lg-7 col-xl-7">
            <div class="list-card h-100">
                <div class="form-card-header" style="background: linear-gradient(92deg, #4b6cb7 60%, #f7971e 100%);">
                    <i class="fa fa-list fa-lg"></i>
                    <span>All Users</span>
                </div>
                <div class="pt-3">
                    <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
                        <table class="table table-hover table-striped mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:60px;">Pic</th>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Contact</th>
                                    <th>Role</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (userList != null && userList.Any())
                                {
                                    foreach (var u in userList)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(u.ProfilePicUrl))
                                                {
                                                    <img src="@u.ProfilePicUrl"
                                                         class="user-thumb"
                                                         style="width:40px;height:40px;border-radius:50%;object-fit:cover;border-width:1.5px;" />
                                                }
                                            </td>
                                            <td>@u.FullName</td>
                                            <td>@u.Username</td>
                                            <td>@u.ContactNumber</td>
                                            <td>@u.Role</td>
                                            <td class="text-end">
                                                <a asp-action="Edit" asp-route-id="@u.Id"
                                                   class="btn btn-sm btn-outline-success rounded-pill me-1">
                                                    <i class="fa fa-edit"></i>
                                                </a>

                                                <a href="@Url.Action("Delete", "User", new { id = u.Id })"
                                                   class="btn btn-sm btn-outline-danger rounded-pill"
                                                   onclick="confirmDelete(event, this)">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">No users found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const isEditMode = @((isEditMode ? "true" : "false"));

        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                document.getElementById('imgPreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        function confirmDelete(event, element) {
            event.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to delete this user?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete',
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = element.href;
                }
            });
        }

        document.addEventListener("DOMContentLoaded", function () {
            const fullName = document.getElementById("FullName");
            const username = document.getElementById("Username");
            const password = document.getElementById("Password");
            const contact = document.getElementById("ContactNumber");
            const email = document.getElementById("Email");
            const role = document.getElementById("RoleText");
            const address = document.getElementById("Address");
            const btnSave = document.getElementById("btnSaveUser");
            const btnClear = document.getElementById("btnClearUser");
            const notification = document.getElementById("customNotification");

            function clearForm() {
                [fullName, username, password, contact, email, role, address].forEach(el => {
                    if (el) el.value = "";
                });
            }

            // ✅ Sirf ADD mode me auto clear + focus
            if (!isEditMode) {
                clearForm();
                if (fullName) {
                    fullName.focus();
                }
            } else {
                // Edit mode: data rehne do, bas focus set
                if (fullName) {
                    fullName.focus();
                    if (fullName.select) fullName.select();
                }
            }

            // Success popup → 2 sec, phir hide + focus fullName
            if (notification) {
                setTimeout(() => {
                    notification.classList.add("hide");
                    setTimeout(() => {
                        notification.style.display = 'none';
                        if (fullName && !isEditMode) {
                            fullName.focus();
                            if (fullName.select) fullName.select();
                        }
                    }, 500);
                }, 2000);
            }

            // Clear button
            if (btnClear) {
                btnClear.addEventListener("click", function (e) {
                    e.preventDefault();
                    clearForm();
                    if (fullName) {
                        fullName.focus();
                    }
                });
            }

            // ENTER flow
            const flowIds = [
                "FullName",
                "Username",
                "Password",
                "ContactNumber",
                "Email",
                "RoleText",
                "Address",
                "btnSaveUser"
            ];

            function focusNext(currentId) {
                const idx = flowIds.indexOf(currentId);
                if (idx === -1) return;
                const nextId = flowIds[idx + 1];
                if (!nextId) return;
                const nextEl = document.getElementById(nextId);
                if (nextEl) {
                    nextEl.focus();
                    if (nextEl.tagName === "INPUT" || nextEl.tagName === "TEXTAREA") {
                        if (nextEl.select) nextEl.select();
                    }
                }
            }

            flowIds.forEach(id => {
                const el = document.getElementById(id);
                if (!el) return;
                el.addEventListener("keydown", function (e) {
                    if (e.key === "Enter") {
                        e.preventDefault();
                        if (id === "btnSaveUser") {
                            btnSave?.click();
                        } else {
                            focusNext(id);
                        }
                    }
                });
            });
        });
    </script>
}

<style>
    .sms-message {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #1e7e34;
        color: #ffffff;
        padding: 15px 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.35);
        font-size: 1.1rem;
        font-weight: 600;
        z-index: 1050;
        opacity: 1;
        transition: opacity 0.5s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 240px;
    }
    .sms-message.show { opacity: 1; }
    .sms-message.hide { opacity: 0; }
</style>

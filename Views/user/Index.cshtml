@model List<GSoftPosNew.Models.User>
@{
    ViewData["Title"] = "User List"; Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/user.css" rel="stylesheet" />

<h2 class="border-start border-4 border-success ps-3 mb-4">User List</h2>
@if (TempData["Success"] != null)
{
    <div id="successAlert" class="alert alert-success">
        @TempData["Success"]
    </div>

    <script>
        // Wait 2 seconds (2000 ms), then fade out or hide the alert
        setTimeout(function () {
            var alert = document.getElementById('successAlert');
            if (alert) {
                alert.style.transition = "opacity 0.5s ease";
                alert.style.opacity = "0";
                setTimeout(() => alert.remove(), 500); // remove from DOM after fade
            }
        }, 2000);
    </script>
}


<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>Pic</th>
            <th>Name</th>
            <th>Username</th>
            <th>Contact</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(u.ProfilePicUrl))
                    {
                        <img src="@u.ProfilePicUrl" class="user-thumb" />
                    }
                </td>
                <td>@u.FullName</td>
                <td>@u.Username</td>
                <td>@u.ContactNumber</td>
                <td>
                    @{
                        string roleName = "";
                        if (u.RoleId.HasValue && ViewBag.Roles is List<SelectListItem> roleList)
                        {
                            var role = roleList.FirstOrDefault(r => r.Value == u.RoleId.Value.ToString());
                            if (role != null)
                            {
                                roleName = role.Text;
                            }
                        }
                    }
                    @roleName
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@u.Id" class="me-2 text-primary"><i class="fa fa-edit"></i></a>

                    <a asp-action="Delete" asp-controller="User" asp-route-id="@u.Id"
                       class="btn btn-link text-danger p-0"
                       onclick="confirmDelete(event, this)">
                        <i class="fa fa-trash"></i>
                    </a>


                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success mt-3">
    <i class="fa fa-user-plus me-1"></i> Add New User
</a>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function confirmDelete(event, element) {
        event.preventDefault(); // stop immediate navigation

        Swal.fire({
            title: 'Are you sure?',
            text: "This action cannot be undone!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to delete URL
                window.location.href = element.href;
            }
        });
    }
</script>



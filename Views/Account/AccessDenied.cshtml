@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout"; // Use the main layout for consistency
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="text-center">
        <div class="mb-4">
            <i class="fas fa-ban fa-5x text-danger"></i>
        </div>

        <h1 class="display-4 fw-bold mb-3">Access Denied</h1>

        <p class="lead mb-4">
            You don't have permission to access this resource.
        </p>

        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Please contact your system administrator if you believe this is an error.
        </div>

        <div class="mt-4">
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg me-2">
                <i class="fas fa-home me-2"></i>Go to Dashboard
            </a>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-sign-out-alt me-2"></i>Logout
            </a>
        </div>
    </div>
</div>
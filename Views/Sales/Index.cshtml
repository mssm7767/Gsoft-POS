<script>
    document.getElementById("categoryInput").addEventListener("change", function () {
        const selectedCategory = this.value.trim().toLowerCase();
        const rows = document.querySelectorAll("#saleItemsBody tr");
        let grandTotal = 0;

        rows.forEach(row => {
            // Skip grand total row
            if (row.classList.contains("table-light")) {
                return;
            }

            const categoryCell = row.querySelector("td:nth-child(3)"); // Category col
            const totalCell = row.querySelector("td:nth-child(7)"); // Total col

            if (!selectedCategory) {
                // Show all rows
                row.style.display = "";
                grandTotal += parseFloat(totalCell.innerText.replace(/,/g, ""));
            } else {
                const rowCategory = categoryCell.innerText.trim().toLowerCase();
                if (rowCategory === selectedCategory) {
                    row.style.display = "";
                    grandTotal += parseFloat(totalCell.innerText.replace(/,/g, ""));
                } else {
                    row.style.display = "none";
                }
            }
        });

        // Update Grand Total Cell
        document.getElementById("grandTotalCell").innerText = grandTotal.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2
        });
    });
</script>


<script>
    // global mode: false = invoice mode, true = items mode
    let isItemsMode = false;

    function toggleItems() {
        var items = document.querySelector(".saleItemsTbl");
        var sale = document.querySelector(".main-table");
        var category = document.getElementById("category");

        if (!items || !sale) return;

        if (items.style.display === "none" || items.style.display === "") {
            // items mode ON
            items.style.display = "table";
            category.style.display = "block";
            sale.style.display = "none";
            isItemsMode = true;
        } else {
            // wapas invoice mode
            items.style.display = "none";
            category.style.display = "none";
            sale.style.display = "table";
            isItemsMode = false;
        }
    }

    function deleteSale(saleId) {
        Swal.fire({
            title: "Are you sure?",
            text: "This will permanently delete the sale.",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "Cancel"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/Sales/Delete/${saleId}`, {
                    method: "POST"
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: "Deleted!",
                                text: data.message,
                                icon: "success",
                                showConfirmButton: false,
                                timer: 1500,
                                timerProgressBar: true
                            });

                            setTimeout(() => {
                                location.reload();
                            }, 1500);
                        } else {
                            Swal.fire({
                                title: "Access Denied",
                                text: data.message,
                                icon: "error",
                                showConfirmButton: false,
                                timer: 2000
                            });
                        }
                    })
                    .catch(() => {
                        Swal.fire({
                            title: "Error",
                            text: "Something went wrong!",
                            icon: "error",
                            showConfirmButton: false,
                            timer: 2000
                        });
                    });
            }
        });
    }

    function printA4() {
        var invBlock = document.getElementById('a4InvoiceBlock');
        var itemsBlock = document.getElementById('a4ItemsBlock');

        if (invBlock && itemsBlock) {
            if (isItemsMode) {
                // item mode → items A4 show
                invBlock.style.display = 'none';
                itemsBlock.style.display = 'block';
            } else {
                // invoice mode → invoice A4 show
                invBlock.style.display = 'block';
                itemsBlock.style.display = 'none';
            }
        }

        window.print();
    }
</script>

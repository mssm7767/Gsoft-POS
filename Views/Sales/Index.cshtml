@using System
@using System.Linq
@model GSoftPosNew.ViewModels.SalesFilterViewModel

@{
    ViewData["Title"] = "Sales Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fromStr = Model.FromDate?.ToString("yyyy-MM-dd");
    var toStr = Model.ToDate?.ToString("yyyy-MM-dd");
}

@{
    var allSaleItems = Model.Sales
        .SelectMany(s => s.SaleItems)
        .ToList();

    decimal grandItemTotal = allSaleItems.Sum(i => i.Quantity * i.UnitPrice);
}


<style>
    /* ========= PAGE BACKGROUND & LAYOUT ========= */
    .sales-page-wrapper {
        background: radial-gradient(circle at top left, #e0f2fe 0, #eef2ff 40%, #f9fafb 100%);
        min-height: 100vh;
        padding: 1.5rem 0 2.5rem;
    }

    .card {
        border-radius: 1.1rem;
        border: 1px solid rgba(148, 163, 184, 0.25);
        box-shadow: 0 14px 35px rgba(15, 23, 42, 0.12);
    }

    /* ========= PAGE HEADER ========= */
    .page-header {
        background: linear-gradient(120deg, #0ea5e9 0%, #6366f1 50%, #22c55e 100%);
        border-radius: 1.1rem;
        padding: 0.9rem 1.3rem;
        color: #eff6ff;
        box-shadow: 0 18px 40px rgba(15, 23, 42, 0.4);
    }

    .page-header-main {
        display: flex;
        align-items: center;
        gap: .8rem;
    }

    .page-header-icon {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        background: rgba(15, 23, 42, 0.18);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .page-header h2 {
        letter-spacing: .3px;
        margin-bottom: .1rem;
    }

    .page-header-sub {
        font-size: .8rem;
        opacity: .9;
    }

    .btn-soft {
        border-radius: 999px;
        box-shadow: 0 8px 18px rgba(15, 23, 42, .15);
        border: none;
    }

    .btn-soft-outline {
        border-radius: 999px;
    }

    /* ========= FILTER CARD ========= */
    .filter-card {
        border: none;
        background: linear-gradient(135deg, #eff6ff 0, #e0f2fe 60%, #ecfdf5 100%);
    }

        .filter-card .card-body {
            padding: 1.1rem 1.3rem 0.8rem;
        }

    .filter-label {
        font-size: .8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: .08em;
        color: #6b7280;
    }

        .filter-label i {
            font-size: .95rem;
        }

    .filter-card .form-control {
        border-radius: .8rem;
        border-color: rgba(148, 163, 184, 0.7);
    }

    .filter-card .btn-success {
        box-shadow: 0 10px 28px rgba(22, 163, 74, 0.36);
    }

    .filter-card .btn-outline-secondary {
        border-width: 1px;
    }

    /* ========= KPI BADGES ========= */
    .kpi-row {
        gap: .6rem;
    }

    .kpi-badge {
        display: inline-flex;
        align-items: center;
        gap: .55rem;
        border-radius: .9rem;
        padding: .5rem .9rem;
        font-size: .9rem;
        border: 1px solid rgba(148, 163, 184, 0.45);
        background: #ffffff;
        box-shadow: 0 10px 20px rgba(15, 23, 42, 0.08);
    }

        .kpi-badge .icon {
            width: 30px;
            height: 30px;
            border-radius: 999px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: .95rem;
        }

        .kpi-badge .label {
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: .06em;
            font-size: .7rem;
        }

        .kpi-badge .val {
            font-weight: 700;
            font-size: .9rem;
        }

    .kpi-primary .icon {
        background: rgba(59, 130, 246, 0.12);
        color: #1d4ed8;
    }

    .kpi-tax .icon {
        background: rgba(248, 113, 113, 0.15);
        color: #b91c1c;
    }

    .kpi-discount .icon {
        background: rgba(251, 191, 36, 0.16);
        color: #b45309;
    }

    .kpi-total .icon {
        background: rgba(34, 197, 94, 0.15);
        color: #15803d;
    }

    /* ========= TABLE ========= */
    .table-card {
        border-radius: 1.1rem;
        overflow: hidden;
    }

    .table.compact > :not(caption) > * > * {
        padding: .45rem .6rem;
    }

    .table thead th {
        letter-spacing: .4px;
        font-size: .78rem;
        text-transform: uppercase;
    }

        .table thead th i {
            font-size: .85rem;
        }

    .table-hover tbody tr:hover {
        background: #eff6ff;
    }

    .badge-invoice {
        background: rgba(37, 99, 235, 0.1);
        color: #1d4ed8;
        border-radius: 999px;
        padding: .15rem .6rem;
        font-size: .78rem;
        font-weight: 600;
    }

    .cashier-chip {
        border-radius: 999px;
        background: rgba(15, 23, 42, .04);
        font-size: .8rem;
        padding: .15rem .5rem;
    }

    .action-btn-group .btn {
        border-radius: 999px;
        padding-inline: .6rem;
    }

    /* ========= ITEMS MODAL ========= */
    .items-modal-title {
        font-weight: 600;
        letter-spacing: .03em;
        text-transform: uppercase;
        font-size: .8rem;
        color: #6b7280;
    }

    .items-modal-header {
        border-bottom: 1px solid rgba(148, 163, 184, .3);
    }

    .items-table thead th {
        background-color: #111827;
        color: #f9fafb;
        font-size: .78rem;
        text-transform: uppercase;
        letter-spacing: .05em;
    }

    .items-table tfoot td {
        font-weight: 700;
        background: #f3f4f6;
    }

    /* ========= PRINT (base A4) ========= */
    @@media print {
        @@page {
            size: A4;
            margin: 12mm;
        }

        body {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
            font-size: 12px;
            font-family: Arial, Helvetica, sans-serif;
        }

        .no-print, header, nav, .navbar, .sidebar, .footer, .topbar {
            display: none !important;
        }

        .container-fluid, .sales-page-wrapper {
            padding: 0 !important;
            margin: 0 !important;
            background: #ffffff !important;
        }

        .card, .page-header {
            border: none !important;
            box-shadow: none !important;
            background: transparent !important;
        }

        .table thead th {
            background: #000 !important;
            color: #fff !important;
            -webkit-print-color-adjust: exact;
        }

        a.btn, button.btn {
            display: none !important;
        }
    }
</style>

<div class="sales-page-wrapper">
    <div class="container-fluid py-3">

        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-3 page-header no-print">
            <div class="page-header-main">
                <div class="page-header-icon">
                    <i class="fa fa-chart-line"></i>
                </div>
                <div>
                    <h2 class="fw-bold mb-1">
                        @ViewData["Title"]
                    </h2>
                    <div class="page-header-sub">
                        <i class="fa fa-info-circle me-1"></i>
                        Filter results ko A4 ya Thermal (80mm) par print karein.
                    </div>
                </div>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="POS" class="btn btn-light btn-soft px-3">
                    <i class="fa fa-plus me-1"></i> New Sale
                </a>
            </div>
        </div>

        <!-- Filters -->
        <div class="card shadow-sm mb-3 border-0 rounded-3 no-print filter-card">
            <div class="card-body">
                <form method="get" asp-action="Index" class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label filter-label">
                            <i class="fa fa-calendar-day me-1 text-primary"></i>From Date
                        </label>
                        <input id="fromDate" type="date" name="fromDate" class="form-control"
                               value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label filter-label">
                            <i class="fa fa-calendar-day me-1 text-primary"></i>To Date
                        </label>
                        <input id="toDate" type="date" name="toDate" class="form-control"
                               value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label filter-label">
                            <i class="fa fa-magnifying-glass me-1 text-primary"></i>Search (Invoice / Cashier)
                        </label>
                        <input id="search" type="text" name="search" class="form-control"
                               placeholder="Invoice # or Cashier" value="@Model.Search" />
                    </div>
                    <div id="category" class="col-md-2" style="display: none;">
                        <label class="form-label filter-label">
                            <i class="fa fa-list-alt me-1 text-primary"></i>
                            Category
                        </label>

                        <select id="categoryInput" name="CategoryId" class="form-control">
                            <option value="">-- Select Category --</option>

                            @foreach (var cat in ViewBag.Categories)
                            {
                                <option value="@cat.Name">
                                    @cat.Name
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4 text-end">
                        <button type="submit" class="btn btn-success px-4 btn-soft">
                            <i class="fa fa-search me-1"></i> Filter
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-3 ms-2 btn-soft-outline" title="Reset">
                            <i class="fa fa-sync"></i>
                        </a>
                    </div>

                    <!-- Print toolbar -->
                    <div class="col-12 d-flex justify-content-end gap-2 mt-2">
                        <!-- ✅ SIMPLE Items Qty button -->
                        <button type="button" id="itemQty"
                                onclick="toggleItems()"
                                class="btn btn-secondary btn-soft">
                            <i class="fa fa-list-ul me-2"></i> Items Qty
                        </button>

                        <button type="button" class="btn btn-dark btn-soft" onclick="printA4()">
                            <i class="fa fa-print me-2"></i> Print (A4)
                        </button>
                        <a asp-action="LastDaySales" asp-controller="Sales" type="button"
                           class="btn btn-outline-dark btn-soft-outline">
                            <i class="fa fa-receipt me-2"></i> Thermal Print (80mm)
                        </a>
                    </div>

                </form>
            </div>
        </div>

        <!-- KPIs -->
        @if (Model?.Sales != null && Model.Sales.Any())
        {

            var grandSaleSubtotal = Model.Sales
            .Where(s => s.SaleType == "Sale")
            .Sum(s => s.SubTotal);

            var grandReturnSubtotal = Model.Sales
            .Where(s => s.SaleType == "Return")
            .Sum(s => s.SubTotal);

            var grandSubtotal = grandSaleSubtotal - grandReturnSubtotal;


            var grandTax = Model.Sales.Sum(s => s.Tax);
            var grandDiscount = Model.Sales.Sum(s => s.Discount);

            var grandSaleTotal = Model.Sales
            .Where(s => s.SaleType == "Sale")
            .Sum(s => s.Total);

            var grandReturnTotal = Model.Sales
            .Where(s => s.SaleType == "Return")
            .Sum(s => s.Total);

            var grandTotal = grandSaleTotal - grandReturnTotal;


            <div class="d-flex flex-wrap kpi-row mb-3 no-print">
                <span class="kpi-badge kpi-primary">
                    <span class="icon"><i class="fa fa-receipt"></i></span>
                    <span>
                        <div class="label">Invoices</div>
                        <div class="val">@Model.Sales.Count()</div>
                    </span>
                </span>
                <span class="kpi-badge kpi-primary">
                    <span class="icon"><i class="fa fa-calculator"></i></span>
                    <span>
                        <div class="label">Subtotal</div>
                        <div class="val">@grandSubtotal.ToString("N2")</div>
                    </span>
                </span>
                <span class="kpi-badge kpi-tax">
                    <span class="icon"><i class="fa fa-percent"></i></span>
                    <span>
                        <div class="label">Tax</div>
                        <div class="val">@grandTax.ToString("N2")</div>
                    </span>
                </span>
                <span class="kpi-badge kpi-discount">
                    <span class="icon"><i class="fa fa-tag"></i></span>
                    <span>
                        <div class="label">Discount</div>
                        <div class="val">-@grandDiscount.ToString("N2")</div>
                    </span>
                </span>
                <span class="kpi-badge kpi-total">
                    <span class="icon"><i class="fa fa-wallet"></i></span>
                    <span>
                        <div class="label">Total</div>
                        <div class="val">@grandTotal.ToString("N2")</div>
                    </span>
                </span>
            </div>
        }

        <!-- Report Table (screen / A4) -->
        <div class="card shadow-lg border-0 rounded-3 table-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <!-- INVOICE-WISE TABLE -->
                    <table class="main-table table table-hover table-striped mb-0 align-middle compact">
                        <thead class="table-dark text-uppercase small">
                            <tr>
                                <th>#</th>
                                <th>Sale Type</th>
                                <th><i class="fa fa-receipt me-1"></i>Invoice</th>
                                <th><i class="fa fa-calendar-alt me-1"></i>Date</th>
                                <th><i class="fa fa-user me-1"></i>Cashier</th>
                                <th class="text-end"><i class="fa fa-layer-group me-1"></i>Subtotal</th>
                                <th class="text-end"><i class="fa fa-percent me-1"></i>Tax</th>
                                <th class="text-end"><i class="fa fa-tag me-1"></i>Discount</th>
                                <th class="text-end"><i class="fa fa-wallet me-1"></i>Total</th>
                                <th class="text-center"><i class="fa fa-cogs"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Sales != null && Model.Sales.Any())
                            {

                                var index = 1;
                                var grandSubtotal = 0m;
                                var grandTax = 0m;
                                var grandDiscount = 0m;
                                var grandTotal = 0m;
                                @foreach (var sale in Model.Sales)
                                {
                                    if (sale.SaleType == "Return")
                                    {
                                        grandSubtotal -= sale.SubTotal;
                                        grandTax -= sale.Tax;
                                        grandDiscount -= sale.Discount;
                                        grandTotal -= sale.Total;
                                    }
                                    else
                                    {
                                        grandSubtotal += sale.SubTotal;
                                        grandTax += sale.Tax;
                                        grandDiscount += sale.Discount;
                                        grandTotal += sale.Total;
                                    }

                                <!-- MAIN SALE ROW -->
                                <tr>
                                    <td class="fw-semibold text-muted">@index</td>
                                    <td class="fw-semibold @(sale.SaleType == "Return" ? "text-danger" : "text-success")">
                                        @sale.SaleType
                                    </td>

                                    <td>
                                        <span class="badge-invoice">
                                            <i class="fa fa-hashtag me-1"></i>@sale.InvoiceNumber
                                        </span>
                                    </td>
                                    <td>
                                        <i class="fa fa-clock me-1 text-muted"></i>
                                        @sale.SaleDate.ToString("g")
                                    </td>
                                    <td>
                                        <span class="cashier-chip">
                                            <i class="fa fa-user-gear me-1 text-primary"></i>@sale.CashierId
                                        </span>
                                    </td>

                                    <td class="text-end @(sale.SaleType == "Return" ? "text-danger" : "")">
                                        @(sale.SaleType == "Return"
                                                                            ? "-" + sale.SubTotal.ToString("N2")
                                                                            : sale.SubTotal.ToString("N2"))
                                                                                                       </td>


                                    <td class="text-end">@sale.Tax.ToString("N2")</td>
                                    <td class="text-end text-danger">-@sale.Discount.ToString("N2")</td>
                                    <td class="text-end fw-bold @(sale.SaleType == "Return" ? "text-danger" : "text-success")">
                                        @(sale.SaleType == "Return"
                                                                            ? "-" + sale.Total.ToString("N2")
                                                                            : sale.Total.ToString("N2"))
                                </td>

                                                                <td class="text-center">
                                                                    <div class="action-btn-group d-inline-flex">
                                                                        <a asp-action="Receipt" asp-route-id="@sale.Id"
                                                                           class="btn btn-sm btn-outline-secondary me-1"
                                                                           title="View Receipt">
                                                                            <i class="fa fa-file-invoice"></i>
                                                                        </a>
                                                                        <a asp-action="Edit" asp-route-id="@sale.Id"
                                                                           class="btn btn-sm btn-outline-primary me-1"
                                                                           title="Edit">
                                                                            <i class="fa fa-edit"></i>
                                                                        </a>
                                                                        <button onclick="deleteSale(@sale.Id)"
                                                                                class="btn btn-sm btn-outline-danger"
                                                                                type="button"
                                                                                title="Delete">
                                                                            <i class="fa fa-trash"></i>
                                                                        </button>
                                                                    </div>
                                                                </td>
                                                            </tr>



                                                            index++;
                                }


                                <!-- Totals Row -->
                                <tr class="table-light fw-bold">
                                    <td colspan="4" class="text-end">Totals:</td>
                                    <td class="text-end">@grandSubtotal.ToString("N2")</td>
                                    <td class="text-end">@grandTax.ToString("N2")</td>
                                    <td class="text-end text-danger">-@grandDiscount.ToString("N2")</td>
                                    <td class="text-end text-success">@grandTotal.ToString("N2")</td>
                                    <td></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-4">
                                        <i class="fa fa-info-circle me-1"></i> No sales records found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <table class="table table-bordered mb-3 saleItemsTbl" style="background:#fcfcfc; display: none;">
                        <thead class="table-light">
                            <tr>
                                <th style="width:5%;" class="text-center">#</th>
                                <th style="width:10%;">Item Code</th>
                                <th style="width:10%;">Category</th>
                                <th style="width:30%;">Item Name</th>
                                <th class="text-center" style="width:10%;">Qty</th>
                                <th class="text-end" style="width:15%;">Unit Price</th>
                                <th class="text-end" style="width:15%;">Total</th>
                            </tr>
                        </thead>

                        <tbody id="saleItemsBody">
                            @{
                                // Step 1: Flatten sale items + apply minus if Return
                                var allSaleItemsQty = Model.Sales
                                .SelectMany(s => s.SaleItems.Select(i => new
                                {
                                    s.SaleType,
                                    Category = i.Item.Category.Name,
                                    ItemCode = i.Item?.ItemCode,
                                    ItemName = i.Item?.ItemName,
                                    Quantity = s.SaleType == "Return" ? -i.Quantity : i.Quantity,
                                    UnitPrice = i.UnitPrice
                                }))
                                .ToList();

                                // Step 2: Group items and sum quantity & total
                                var groupedItems = allSaleItemsQty
                                .GroupBy(x => x.ItemCode)
                                .Select(g => new
                                {
                                    ItemCode = g.Key,
                                    Category = g.First().Category,
                                    ItemName = g.First().ItemName,
                                    Quantity = g.Sum(x => x.Quantity),
                                    UnitPrice = g.First().UnitPrice,
                                    Total = g.Sum(x => x.Quantity * x.UnitPrice)
                                })
                                .OrderBy(x => x.ItemName)
                                .ToList();

                                var itemIdx = 1;

                                decimal grandItemTotalQty = allSaleItemsQty.Sum(i => i.Quantity * i.UnitPrice);
                            }

                            @foreach (var item in groupedItems)
                            {
                                <tr>
                                    <td class="text-center">@itemIdx</td>

                                    <td>@item.ItemCode</td>
                                    <td>@item.Category</td>
                                    <td>@item.ItemName</td>

                                    <td class="text-center">
                                        @item.Quantity
                                    </td>

                                    <td class="text-end">
                                        @item.UnitPrice.ToString("N2")
                                    </td>

                                    <td class="text-end fw-semibold">
                                        @item.Total.ToString("N2")
                                    </td>
                                </tr>

                                itemIdx++;
                            }


                            <tr class="table-light fw-bold">
                                <td colspan="6" class="text-end">Grand Total:</td>
                                <td id="grandTotalCell" class="text-end text-success">@grandItemTotalQty.ToString("N2")</td>
                            </tr>
                        </tbody>
                    </table>


                </div>
            </div>
        </div>

        <!-- ===== A4 PRINT TEMPLATE (INVOICE + ITEMS) ===== -->
        <div id="a4Area" class="d-none">

            <!-- INVOICE BLOCK (default) -->
            <div id="a4InvoiceBlock" style="display:block;">
                <div style="text-align:center;margin-bottom:10px;">
                    <div style="font-size:20px;font-weight:800;text-transform:uppercase;">
                    </div>
                    <div style="font-size:14px;font-weight:600;margin-top:2px;">
                        Sales Report
                    </div>
                    <div style="font-size:11px;color:#4b5563;margin-top:2px;">
                        Range: @((Model.FromDate?.ToString("yyyy-MM-dd") ?? "--")) → @((Model.ToDate?.ToString("yyyy-MM-dd") ?? "--"))
                        &nbsp; | &nbsp;
                        Printed: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
                    </div>
                    <hr style="margin-top:8px;margin-bottom:8px;border:0;border-top:1px solid #9ca3af;" />
                </div>

                <table style="width:100%;border-collapse:collapse;font-size:11px;">
                    <thead>
                        <tr>
                            <th style="padding:6px;border:1px solid #333;text-align:left;background:#111827;color:#f9fafb;">Invoice</th>
                            <th style="padding:6px;border:1px solid #333;text-align:left;background:#111827;color:#f9fafb;">Date</th>
                            <th style="padding:6px;border:1px solid #333;text-align:left;background:#111827;color:#f9fafb;">Cashier</th>
                            <th style="padding:6px;border:1px solid #333;text-align:right;background:#111827;color:#f9fafb;">Subtotal</th>
                            <th style="padding:6px;border:1px solid #333;text-align:right;background:#111827;color:#f9fafb;">Tax</th>
                            <th style="padding:6px;border:1px solid #333;text-align:right;background:#111827;color:#f9fafb;">Discount</th>
                            <th style="padding:6px;border:1px solid #333;text-align:right;background:#111827;color:#f9fafb;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Sales != null && Model.Sales.Any())
                        {
                            decimal tSub = 0, tTax = 0, tDis = 0, tTot = 0;
                            foreach (var s in Model.Sales)
                            {
                                tSub += s.SubTotal; tTax += s.Tax; tDis += s.Discount; tTot += s.Total;
                                <tr>
                                    <td style="padding:6px;border:1px solid #ddd;">@s.InvoiceNumber</td>
                                    <td style="padding:6px;border:1px solid #ddd;">@s.SaleDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td style="padding:6px;border:1px solid #ddd;">@s.CashierId</td>
                                    <td style="padding:6px;border:1px solid #ddd;text-align:right;">@s.SubTotal.ToString("N2")</td>
                                    <td style="padding:6px;border:1px solid #ddd;text-align:right;">@s.Tax.ToString("N2")</td>
